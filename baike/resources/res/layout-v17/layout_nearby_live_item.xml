<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/nearby_backgroud" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="75dp">
    <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/avatar" android:layout_width="@dimen/large_user_icon" android:layout_height="@dimen/large_user_icon" android:layout_marginLeft="18dp" android:layout_marginRight="10dp" android:scaleType="centerCrop" android:layout_centerVertical="true" app:actualImageScaleType="6"/>
    <TextView android:textSize="10sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/begin" android:background="@drawable/shape_live_begin" android:layout_width="33dp" android:layout_height="15dp" android:text="LIVE" android:maxLines="1" android:layout_alignRight="@+id/avatar" android:layout_alignBottom="@+id/avatar"/>
    <RelativeLayout android:orientation="horizontal" android:id="@+id/name_lin" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_toRightOf="@+id/avatar">
        <TextView android:textSize="16.5dp" android:textColor="#3e4146" android:ellipsize="end" android:gravity="center" android:id="@+id/name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="7dp" android:maxWidth="110dp" android:singleLine="true" android:layout_alignParentLeft="true"/>
        <TextView android:id="@+id/level" android:layout_width="34dp" android:layout_height="15dp" android:layout_marginLeft="4dp" android:text="11" android:layout_toRightOf="@+id/name" android:layout_centerVertical="true" android:layout_marginStart="10dp" style="@style/LevelLabel"/>
        <TextView android:id="@+id/family" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:text="测试" android:layout_toRightOf="@+id/level" android:layout_centerVertical="true" style="@style/FamilyLabel"/>
        <TextView android:textSize="11dp" android:textColor="#969696" android:gravity="center" android:id="@+id/location" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_marginRight="10dp" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <TextView android:textSize="14dp" android:textColor="#63625e" android:id="@+id/latest_dynamic" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="8dp" android:layout_marginRight="5dp" android:singleLine="true" android:layout_toRightOf="@+id/avatar" android:layout_below="@+id/name_lin"/>
    <View android:id="@+id/divider" android:background="#e5e5e5" android:layout_width="match_parent" android:layout_height="1dp" android:layout_alignParentBottom="true"/>
</RelativeLayout>
