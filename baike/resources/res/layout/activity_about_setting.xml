<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:SettingItem="http://schemas.android.com/apk/res/qsbk.app" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:background="?attr/setting_bg_new" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:background="?attr/setting_bg_new" android:paddingBottom="33dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:layout_gravity="center" android:id="@+id/about_header_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="54dp"/>
                <TextView android:textSize="13dp" android:gravity="center" android:layout_gravity="center" android:id="@+id/qiubai_version_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="13dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/other_message_notify_detail" android:layout_width="match_parent" android:layout_height="wrap_content">
                <qsbk.app.widget.SettingItem android:id="@+id/about_qiubai_settingitem" android:background="?attr/notification_setting_item_background" android:paddingLeft="5dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="49dp" SettingItem:mainTitle="关于糗百" SettingItem:showDivide="false"/>
                <View android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/g_divider_medium" style="?attr/setting_line_bg_new"/>
                <qsbk.app.widget.SettingItem android:id="@+id/new_version_settingitem" android:background="?attr/notification_setting_item_background" android:paddingLeft="5dp" android:layout_width="match_parent" android:layout_height="49dp" SettingItem:mainTitle="新版本检测" SettingItem:showDivide="false"/>
                <View android:id="@+id/new_version_settingitem_line_view" android:layout_width="match_parent" android:layout_height="@dimen/g_divider_medium" style="?attr/setting_line_bg_new"/>
                <qsbk.app.widget.SettingItem android:id="@+id/give_good_settingItem" android:background="?attr/notification_setting_item_background" android:paddingLeft="5dp" android:layout_width="match_parent" android:layout_height="49dp" SettingItem:mainTitle="给糗事百科好评" SettingItem:showDivide="false"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
