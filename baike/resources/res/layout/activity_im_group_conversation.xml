<?xml version="1.0" encoding="utf-8"?>
<qsbk.app.widget.SizeNotifierFrameLayout xmlns:SettingItem="http://schemas.android.com/apk/res/qsbk.app" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/root" android:saveEnabled="true" android:clipChildren="false" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="match_parent" style="?attr/main_bg">
    <RelativeLayout android:fitsSystemWindows="true" android:clipChildren="false" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="match_parent">
        <qsbk.app.im.ScrollTopListView android:scrollbarThumbVertical="@drawable/wb_scrollbar" android:scrollbarStyle="outsideOverlay" android:id="@+id/id_content" android:background="@null" android:layout_width="match_parent" android:layout_height="match_parent" android:listSelector="#00000000" android:transcriptMode="normal" android:cacheColorHint="#0000" android:divider="@null" android:layout_above="@+id/sendlayout" android:layout_below="@+id/tips"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/group_msg_remind_lin" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_gravity="center_vertical" android:layout_width="15dp" android:layout_height="15dp" android:layout_marginLeft="43dp" android:src="@drawable/group_msg_notification"/>
            <TextView android:textSize="14sp" android:textColor="#63625e" android:gravity="center" android:id="@+id/group_msg_remind" android:clickable="true" android:layout_width="0dp" android:layout_height="48dp" android:layout_marginLeft="14dp" android:text="@string/group_msg_too_much_remind" android:maxLines="1" android:maxLength="20" android:layout_weight="1" android:textIsSelectable="false"/>
            <TextView android:textSize="12dp" android:textColor="#ffffff" android:gravity="center" android:layout_gravity="center" android:id="@+id/go_to_group_set" android:layout_width="50dp" android:layout_height="24dp" android:layout_marginRight="15dp" android:text="设置"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/sendlayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <View android:id="@+id/divider" android:background="?attr/dividerColor01" android:layout_width="match_parent" android:layout_height="@dimen/g_divider_medium"/>
            <FrameLayout android:clipChildren="false" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="48dp" style="?attr/msg_input_background">
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/textInputContainer" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageButton android:layout_gravity="bottom" android:id="@+id/more" android:background="@drawable/button_on_press" android:padding="5dp" android:layout_width="34dp" android:layout_height="34dp" android:layout_marginLeft="6dp" android:layout_marginBottom="7dp" style="?attr/more_add"/>
                    <FrameLayout android:layout_gravity="bottom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginBottom="7dp">
                        <ImageButton android:id="@+id/sendEmotion" android:background="@drawable/button_on_press" android:padding="5dp" android:layout_width="34dp" android:layout_height="34dp"/>
                        <ImageButton android:layout_gravity="center_vertical" android:id="@+id/sendKeyboard" android:background="@drawable/button_on_press" android:padding="5dp" android:visibility="gone" android:layout_width="34dp" android:layout_height="34dp"/>
                    </FrameLayout>
                    <EditText android:textSize="@dimen/g_txt_middle" android:id="@+id/addCmtEditText" android:background="@null" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="0px" android:layout_height="wrap_content" android:layout_marginLeft="18dp" android:hint="@string/im_msg_chat_tip" android:maxLines="4" android:layout_weight="1" android:lineSpacingExtra="2dp" android:inputType="text" android:imeOptions="actionSend" style="?attr/msg_input_text"/>
                    <LinearLayout android:gravity="bottom|center_vertical|center_horizontal|center" android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:layout_marginRight="4dp">
                        <TextView android:textSize="10dp" android:textColor="#ff0000" android:id="@+id/remain_txt" android:padding="5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginBottom="20dp"/>
                        <FrameLayout android:layout_width="wrap_content" android:layout_height="match_parent">
                            <ImageView android:layout_gravity="center_vertical" android:id="@+id/send" android:background="@drawable/button_on_press" android:focusable="true" android:visibility="gone" android:clickable="true" android:layout_width="48dp" android:layout_height="match_parent" android:scaleType="centerInside" android:contentDescription="@null" style="?attr/btnSend"/>
                            <ImageView android:layout_gravity="center_vertical" android:id="@+id/sendVoice" android:background="@drawable/button_on_press" android:focusable="true" android:clickable="true" android:layout_width="48dp" android:layout_height="match_parent" android:src="?attr/im_voice" android:scaleType="centerInside" android:contentDescription="@null"/>
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout android:gravity="bottom" android:id="@+id/voiceInputContainer" android:visibility="gone" android:layout_width="match_parent" android:layout_height="48dp">
                    <TextView android:textSize="@dimen/g_txt_small" android:gravity="center_vertical" android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/voiceTime" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_alignParentLeft="true"/>
                    <FrameLayout android:clipChildren="true" android:clipToPadding="true" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_toRightOf="@+id/voiceTime">
                        <TextView android:textSize="@dimen/g_txt_small" android:ellipsize="end" android:gravity="center_vertical" android:layout_gravity="right" android:id="@+id/voiceCancelTips" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="90dp" android:text="@string/voice_record_left2cancel" android:singleLine="true" android:layout_alignParentRight="true" style="?attr/im_voice_record_left2cancel"/>
                    </FrameLayout>
                    <View android:background="?attr/im_voice_slide_to_cancel" android:layout_width="96dp" android:layout_height="match_parent" android:layout_toRightOf="@+id/voiceTime"/>
                </RelativeLayout>
            </FrameLayout>
            <FrameLayout android:id="@+id/emotions" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/emotion_container_height">
                <include android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/im_media_input"/>
            </FrameLayout>
        </LinearLayout>
        <RelativeLayout android:id="@+id/muteLayout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignTop="@+id/sendlayout" android:layout_alignParentBottom="true" style="?attr/msg_input_background">
            <TextView android:textSize="18dp" android:textColor="#969696" android:gravity="center_vertical" android:id="@+id/muteText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="您已被禁言，__分钟后解除" android:drawableLeft="@drawable/group_mute_icon" android:drawablePadding="16dp" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <FrameLayout android:id="@+id/voiceEffectContainer" android:visibility="gone" android:clipChildren="false" android:clipToPadding="false" android:layout_width="90dp" android:layout_height="90dp" android:layout_alignParentRight="true" android:layout_alignParentBottom="true">
            <View android:layout_gravity="center" android:id="@+id/voiceEffect" android:background="@drawable/im_voice_recording_big" android:layout_width="114dp" android:layout_height="114dp" android:layout_marginRight="@dimen/im_voice_record_animation" android:layout_marginBottom="@dimen/im_voice_record_animation"/>
            <ImageButton android:layout_gravity="center" android:id="@+id/voicePause" android:background="@drawable/im_voice_recording_small" android:layout_width="104dp" android:layout_height="104dp" android:layout_marginRight="@dimen/im_voice_record_animation" android:layout_marginBottom="@dimen/im_voice_record_animation" android:src="@drawable/im_voice_recording" android:contentDescription="@null"/>
        </FrameLayout>
        <TextView android:textSize="14dp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/new_msg_count" android:background="@drawable/group_new_msg_count" android:paddingBottom="3dp" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:layout_marginBottom="8dp" android:text="99" android:includeFontPadding="false" android:layout_above="@+id/sendlayout" android:layout_alignParentRight="true"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/at_layout" android:background="@drawable/unread_msg_bg" android:padding="2dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="44dp" android:layout_marginTop="43dp" android:layout_alignParentRight="true">
            <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/at_avatar" android:layout_width="@dimen/small_user_icon" android:layout_height="@dimen/small_user_icon" android:layout_marginLeft="2dp" android:layout_marginRight="3dp" app:placeholderImage="@drawable/unread_msg" app:actualImageScaleType="6"/>
            <TextView android:gravity="center_vertical" android:id="@+id/at_msg" android:layout_width="0dp" android:layout_height="match_parent" android:text="有人@我" android:layout_weight="1"/>
        </LinearLayout>
        <RelativeLayout android:id="@+id/group_board" android:background="@drawable/group_notice_board_bg" android:paddingLeft="15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="45dp">
            <TextView android:textSize="14dp" android:textColor="#63625e" android:ellipsize="end" android:id="@+id/group_board_tv" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" android:maxLength="20" android:layout_centerVertical="true"/>
            <TextView android:textSize="13dp" android:textColor="#54dbaa" android:gravity="center" android:id="@+id/group_board_btn" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <FrameLayout android:id="@+id/loading_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" style="?attr/main_bg">
            <ProgressBar android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" style="?android:attr/progressBarStyle"/>
        </FrameLayout>
    </RelativeLayout>
</qsbk.app.widget.SizeNotifierFrameLayout>
