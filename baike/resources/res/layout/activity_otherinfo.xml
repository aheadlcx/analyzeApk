<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:SettingItem="http://schemas.android.com/apk/res/qsbk.app" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="#91a7ff" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/title_bar" android:layout_width="match_parent" android:layout_height="@dimen/actionbar_height">
        <TextView android:textSize="16sp" android:textColor="@color/white" android:id="@+id/title" android:background="@drawable/oneprofile_button_on_press" android:paddingTop="14dp" android:paddingRight="10dp" android:paddingBottom="14dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="TA的主页" android:drawableLeft="@drawable/ic_arrow_left_padding" android:drawablePadding="2dp" android:layout_alignParentTop="true" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/overflow_button" android:background="@drawable/button_on_press" android:visibility="gone" android:layout_width="56dp" android:layout_height="match_parent" android:src="@drawable/actionbar_over_flow_menu" android:scaleType="center" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <ProgressBar android:id="@+id/info_loading" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginTop="5dp" android:layout_marginRight="5dp" android:progressDrawable="@drawable/loadingbar" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <qsbk.app.widget.PersonalInfoView android:id="@+id/info" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/title_bar" app:view_type="0"/>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/rel_operate" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="30dp" android:layout_alignParentBottom="true">
        <ImageView android:id="@+id/black_report" android:layout_width="45dp" android:layout_height="45dp" android:src="@drawable/rel_report_selector" android:scaleType="fitXY" android:contentDescription="@null"/>
        <ImageView android:id="@+id/relationship" android:layout_width="60dp" android:layout_height="60dp" android:layout_marginLeft="46dp" android:layout_marginRight="46dp" android:src="@drawable/rel_fan_it_selector" android:scaleType="fitXY" android:contentDescription="@null"/>
        <ImageView android:id="@+id/message" android:layout_width="45dp" android:layout_height="45dp" android:src="@drawable/rel_message_selector" android:scaleType="fitXY" android:contentDescription="@null"/>
    </LinearLayout>
    <View android:id="@+id/layerMask" android:background="@r$color/layer_mask" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
</RelativeLayout>
