    </RelativeLayout>
    <View android:background="?attr/dividerColor" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>
    <Button android:enabled="false" android:textSize="16sp" android:textColor="@r$color/col_text_btn_bind" android:layout_gravity="center_horizontal" android:id="@+id/submit" android:background="?attr/bind_btn_bg" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginLeft="20dp" android:layout_marginTop="30dp" android:layout_marginRight="20dp" android:text="@string/next"/>
    <TextView android:textSize="12sp" android:textColor="?attr/color_gray" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="遇到问题请加QQ群：274070027"/>
</LinearLayout>
