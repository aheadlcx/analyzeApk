<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:SettingItem="http://schemas.android.com/apk/res/qsbk.app" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="?attr/setting_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/desc" android:paddingTop="15dp" android:paddingBottom="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="12sp" android:textColor="?attr/color_gray" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="钱袋余额（元）"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:src="@drawable/ic_right_arrow" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView android:textSize="36sp" android:textStyle="bold" android:textColor="?attr/color_black" android:id="@+id/balance" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>
    <FrameLayout android:background="?attr/setting_line_bg_new" android:layout_width="match_parent" android:layout_height="18dp" android:layout_marginTop="36dp"/>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:visibility="gone" android:layout_width="match_parent" android:layout_height="94dp">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/send_laisee" android:layout_width="60dp" android:layout_height="match_parent">
            <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_wallet_laisee"/>
            <TextView android:textSize="10sp" android:textColor="?attr/color_gray" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="去发红包"/>
        </LinearLayout>
        <View android:layout_width="50dp" android:layout_height="0dp"/>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/recharge_diamond" android:layout_width="60dp" android:layout_height="match_parent">
            <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_wallet_diamond"/>
            <TextView android:textSize="10sp" android:textColor="?attr/color_gray" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="去充直播钻"/>
        </LinearLayout>
    </LinearLayout>
    <View android:background="?attr/setting_line_bg_new" android:layout_width="match_parent" android:layout_height="match_parent"/>
</LinearLayout>
