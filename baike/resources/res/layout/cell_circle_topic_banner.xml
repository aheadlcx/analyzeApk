            <TextView android:textSize="10sp" android:textColor="@color/white" android:id="@+id/vol" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Vol."/>
            <TextView android:textSize="24sp" android:textStyle="bold" android:textColor="?attr/color_white" android:id="@+id/desc" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="每周话题"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
