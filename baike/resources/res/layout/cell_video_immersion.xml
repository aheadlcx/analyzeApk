<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:SettingItem="http://schemas.android.com/apk/res/qsbk.app" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@null" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/content_relative" android:layout_width="match_parent" android:layout_height="wrap_content">
        <View android:id="@+id/divider" android:background="#000000" android:layout_width="match_parent" android:layout_height="8dp" android:layout_alignParentTop="true"/>
        <qsbk.app.widget.DiggerBar android:gravity="center_vertical" android:id="@+id/diggerbar" android:visibility="gone" android:layout_width="match_parent" android:layout_height="30dp" android:layout_below="@+id/divider" android:layout_alignWithParentIfMissing="true"/>
        <RelativeLayout android:layout_gravity="center_horizontal" android:id="@+id/mainLayout" android:background="#141418" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/diggerbar">
            <RelativeLayout android:id="@+id/userInfo" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/profile_item_default_margin" android:layout_marginTop="12dp" android:layout_marginRight="@dimen/profile_item_default_margin" android:layout_alignParentLeft="true" android:layout_alignParentTop="true">
                <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/userIcon" android:layout_width="@dimen/middle_user_icon" android:layout_height="@dimen/middle_user_icon" android:layout_alignParentLeft="true" android:contentDescription="@string/description_user_avatar" app:actualImageScaleType="6" style="@style/day_listitem_usericon"/>
                <TextView android:textSize="@dimen/g_txt_small" android:textColor="#969696" android:id="@+id/type" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                <TextView android:id="@+id/userName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="11dp" android:layout_toLeftOf="@+id/type" android:layout_toRightOf="@+id/userIcon" android:layout_centerVertical="true" style="?attr/listitem_username"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/imageLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/profile_item_default_margin" android:layout_below="@+id/userInfo" android:layout_alignParentLeft="true" android:layout_alignWithParentIfMissing="true">
                <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/image" android:drawingCacheQuality="low" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="60dp" android:layout_centerInParent="true" android:contentDescription="@null" app:actualImageScaleType="0"/>
                <qsbk.app.video.CircleVideoPlayerView android:id="@+id/videoView" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_centerInParent="true" app:layout="@layout/layout_circle_video_3" app:previewSizeSameAsVideo="true"/>
                <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/video_preview" android:drawingCacheQuality="low" android:layout_width="match_parent" android:layout_height="1px" android:layout_centerInParent="true" android:contentDescription="@null" app:actualImageScaleType="0"/>
                <qsbk.app.widget.NightModeMaskView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignLeft="@+id/videoView" android:layout_alignTop="@+id/videoView" android:layout_alignRight="@+id/videoView" android:layout_alignBottom="@+id/videoView"/>
                <ProgressBar android:id="@+id/progress" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="100" android:indeterminate="true" android:layout_alignLeft="@+id/image" android:layout_alignTop="@+id/image" android:layout_alignRight="@+id/image" style="?attr/progressbar_image_loading"/>
                <ProgressBar android:id="@+id/video_progress" android:visibility="gone" android:layout_width="46dp" android:layout_height="46dp" android:max="100" android:indeterminate="true" android:layout_centerInParent="true" style="?attr/video_loading_progress"/>
                <TextView android:textColor="#ad9883" android:gravity="center" android:layout_gravity="center" android:id="@+id/imageLoading" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="点击加载图片" android:layout_alignLeft="@+id/image" android:layout_alignTop="@+id/image" android:layout_alignRight="@+id/image" android:layout_alignBottom="@+id/image"/>
                <ImageView android:id="@+id/play_video" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/video_play_selector" android:layout_centerInParent="true"/>
                <ImageView android:id="@+id/gif_tag" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="5dp" android:src="@drawable/ic_gif_tag"/>
            </RelativeLayout>
            <FrameLayout android:id="@+id/contentLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/profile_item_default_margin" android:layout_marginTop="@dimen/profile_item_default_margin" android:layout_marginRight="@dimen/profile_item_default_margin" android:layout_below="@+id/imageLayout" android:layout_alignParentLeft="true" android:layout_alignWithParentIfMissing="true">
                <TextView android:textSize="@dimen/content" android:textColor="#ffffff" android:id="@+id/content" android:layout_width="match_parent" android:layout_height="wrap_content" android:lineSpacingExtra="1.5dp"/>
            </FrameLayout>
            <RelativeLayout android:id="@+id/points_and_comments_count_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/profile_item_default_margin" android:layout_marginTop="10dp" android:layout_below="@+id/contentLayout">
                <TextView android:textSize="13sp" android:textColor="#ffffff" android:id="@+id/funny" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="好笑 " android:layout_alignParentLeft="true"/>
                <qsbk.app.ticker.TickerView android:textSize="13sp" android:textColor="#ffffff" android:id="@+id/points_and_comments_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/funny" android:layout_alignTop="@+id/funny"/>
                <TextView android:textSize="13sp" android:textColor="#ffffff" android:id="@+id/comment_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/points_and_comments_count" android:layout_alignTop="@+id/points_and_comments_count"/>
                <TextView android:textSize="13sp" android:textColor="#ffffff" android:id="@+id/loop" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/location" android:layout_toRightOf="@+id/comment_count" android:layout_alignTop="@+id/points_and_comments_count" android:layout_alignWithParentIfMissing="true" style="?attr/listitem_comment"/>
                <TextView android:textSize="13sp" android:textColor="#ffffff" android:id="@+id/location" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:drawableLeft="@drawable/ic_location_small" android:drawablePadding="8dp" android:layout_alignTop="@+id/points_and_comments_count" android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/operation_bar" android:layout_width="match_parent" android:layout_height="63dp" android:layout_marginLeft="@dimen/profile_item_default_margin" android:layout_below="@+id/points_and_comments_count_layout">
                <qsbk.app.widget.SupportOrNotView android:id="@+id/support_or_not" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="9dp"/>
                <ImageButton android:id="@+id/comment" android:background="@drawable/operation_support_bg_selector" android:focusable="false" android:layout_width="63dp" android:layout_height="match_parent" android:layout_marginRight="9dp" android:scaleType="fitXY" style="?attr/article_comment"/>
                <View android:background="@null" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
                <ImageButton android:layout_gravity="right" android:id="@+id/collection_icon" android:tag="enable" android:background="@drawable/operation_support_bg_selector" android:focusable="false" android:layout_width="63dp" android:layout_height="match_parent" android:scaleType="fitXY" style="?attr/article_more"/>
            </LinearLayout>
            <RelativeLayout android:id="@+id/hot_comment_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/profile_item_default_margin" android:layout_marginRight="@dimen/profile_item_default_margin" android:layout_below="@+id/operation_bar">
                <qsbk.app.widget.QiushiEmotionTextView android:textSize="14dp" android:textColor="?attr/hot_comment" android:id="@+id/hot_comment" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:drawablePadding="5dp" android:lineSpacingExtra="1.2dp" app:emotionSize="16dp"/>
                <ImageView android:id="@+id/hot_comment_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
            </RelativeLayout>
            <View android:id="@+id/immersion_mask1" android:background="#7f141418" android:layout_width="match_parent" android:layout_height="74dp" android:layout_alignParentTop="true"/>
            <View android:id="@+id/immersion_mask2" android:background="#7f141418" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="74dp" android:layout_alignBottom="@+id/imageLayout" android:layout_alignParentTop="true"/>
            <View android:id="@+id/immersion_mask3" android:background="#7f141418" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/imageLayout"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/layerMask" android:background="@drawable/edit_info_items_card_mask" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="4dp"/>
</FrameLayout>
