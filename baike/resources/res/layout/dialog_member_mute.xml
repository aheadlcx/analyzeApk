<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:SettingItem="http://schemas.android.com/apk/res/qsbk.app" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/member_mute_lin" android:layout_width="340dp" android:layout_height="wrap_content">
    <TextView android:textSize="18dp" android:textColor="#3b3d42" android:gravity="center" android:id="@+id/member_mute_remind" android:layout_width="match_parent" android:layout_height="53dp" android:text="禁言时长"/>
    <View android:id="@+id/member_mute_view" android:background="#ededed" android:layout_width="match_parent" android:layout_height="1dp"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/time_group" android:paddingRight="13dp" android:layout_width="match_parent" android:layout_height="106dp">
        <TextView android:textSize="16.5dp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/mute_ten_min" android:background="@drawable/member_mute_time_bg" android:layout_width="0dp" android:layout_height="34dp" android:layout_marginLeft="13dp" android:text="10分钟" android:layout_weight="1"/>
        <TextView android:textSize="16.5dp" android:textColor="#3b3d42" android:gravity="center" android:id="@+id/mute_one_hour" android:layout_width="0dp" android:layout_height="34dp" android:layout_marginLeft="13dp" android:text="1小时" android:layout_weight="1"/>
        <TextView android:textSize="16.5dp" android:textColor="#3b3d42" android:gravity="center" android:id="@+id/mute_twelve_hour" android:layout_width="0dp" android:layout_height="34dp" android:layout_marginLeft="13dp" android:text="12小时" android:layout_weight="1"/>
        <TextView android:textSize="16.5dp" android:textColor="#3b3d42" android:gravity="center" android:id="@+id/mute_one_day" android:layout_width="0dp" android:layout_height="34dp" android:layout_marginLeft="13dp" android:text="24小时" android:layout_weight="1"/>
    </LinearLayout>
    <View android:id="@+id/member_mute_view_middle" android:background="#ededed" android:layout_width="match_parent" android:layout_height="1dp"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="47dp">
        <TextView android:textSize="18dp" android:textColor="#3b3d42" android:gravity="center" android:id="@+id/cancel" android:layout_width="0dp" android:layout_height="match_parent" android:text="取消" android:layout_weight="1"/>
        <View android:id="@+id/member_mute_bottom" android:background="#ededed" android:layout_width="1dp" android:layout_height="match_parent"/>
        <TextView android:textSize="18dp" android:textColor="#3b3d42" android:gravity="center" android:id="@+id/submit" android:layout_width="0dp" android:layout_height="match_parent" android:text="确定" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
