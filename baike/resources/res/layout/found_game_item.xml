<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:SettingItem="http://schemas.android.com/apk/res/qsbk.app" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/found_game_lin" android:background="?attr/found_game_bg" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:orientation="horizontal" android:id="@+id/found_game_first_rel" android:layout_width="match_parent" android:layout_height="56dp">
        <TextView android:textColor="?attr/color_gray" android:gravity="center" android:id="@+id/found_game_description" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="24dp" android:text="点击领取礼包" android:singleLine="true" android:drawableRight="@drawable/ic_right_arrow" android:drawablePadding="5dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/found_game_image" android:background="?attr/found_game_image" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginLeft="24dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="16dp" android:gravity="center" android:id="@+id/found_game_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:text="游戏中心" android:layout_toRightOf="@+id/found_game_image" android:layout_centerVertical="true" style="?attr/found_game_name"/>
        <View android:layout_gravity="center_vertical" android:id="@+id/tips" android:background="?attr/found_item_tips" android:visibility="gone" android:layout_width="10dp" android:layout_height="10dp" android:layout_marginLeft="7dp" android:layout_marginTop="23dp" android:layout_marginRight="5dp" android:layout_toLeftOf="@+id/found_game_description"/>
        <View android:id="@+id/found_game_view" android:background="?attr/found_game_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/g_divider_small" android:layout_marginLeft="24dp" android:layout_marginRight="24dp" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>
