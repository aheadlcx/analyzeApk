<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:SettingItem="http://schemas.android.com/apk/res/qsbk.app" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="#99000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:id="@+id/laisee_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginRight="30dp">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:background="@drawable/bg_laisee_get_top" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:orientation="horizontal" android:id="@+id/head_linearlayout" android:layout_width="match_parent" android:layout_height="30dp" android:layout_marginTop="10dp">
                <ImageView android:id="@+id/close" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/red_envelope_close"/>
                <TextView android:textSize="14dp" android:textColor="#ff9c3030" android:gravity="center" android:layout_gravity="center" android:id="@+id/desc" android:layout_width="match_parent" android:layout_height="match_parent" android:text="拼手气红包" android:maxLines="1" android:includeFontPadding="false"/>
            </RelativeLayout>
            <TextView android:textSize="20dp" android:textColor="@r$color/yellow_laisee" android:gravity="center" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="愚人节红包活动正式开奖" android:maxLines="1" android:includeFontPadding="false"/>
            <TextView android:textSize="12sp" android:textColor="#fbed96" android:gravity="center" android:id="@+id/content" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="13dp"/>
            <qsbk.app.widget.ObservableTextView android:textSize="12dp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/detail" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:text="" android:maxLines="3"/>
            <TextView android:textSize="12dp" android:textColor="#9c3030" android:gravity="center" android:id="@+id/last_desc" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="抢红包时间为2017.04.10-2017.04.15"/>
        </LinearLayout>
        <RelativeLayout android:background="@drawable/bg_laisee_get_center" android:paddingTop="11dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:id="@+id/bind_container" android:layout_width="match_parent" android:layout_height="wrap_content">
                <Button android:textColor="@r$color/red_laisee" android:layout_gravity="center_horizontal" android:id="@+id/bind_phone" android:background="@drawable/shape_laisee_rect" android:layout_width="180dp" android:layout_height="45dp" android:layout_marginTop="18dp" android:text="绑定手机号"/>
                <TextView android:textSize="12sp" android:textColor="#fbed96" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="13dp" android:text="为了您的资金安全请先绑定手机号码"/>
            </LinearLayout>
            <ImageView android:id="@+id/red_envelope_open" android:visibility="gone" android:layout_width="100dp" android:layout_height="100dp" android:src="@drawable/red_envelope_open" android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <FrameLayout android:background="@drawable/bg_laisee_get_bottom" android:layout_width="match_parent" android:layout_height="90dp">
            <TextView android:textSize="14dp" android:textColor="#f8ed96" android:gravity="center" android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/bottom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="22dp" android:text="参与活动讨论>"/>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
