<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:SettingItem="http://schemas.android.com/apk/res/qsbk.app" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:paddingBottom="@dimen/chat_list_bottom" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="12dp" android:layout_gravity="center_horizontal" android:id="@+id/sendDate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" style="?attr/msg_publish_time"/>
    <RelativeLayout android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="20dp" android:layout_marginBottom="2dp">
        <com.facebook.drawee.view.SimpleDraweeView android:layout_gravity="center" android:id="@+id/iv_userhead" android:clickable="true" android:layout_width="@dimen/middle_user_icon" android:layout_height="@dimen/middle_user_icon" android:layout_marginLeft="14dp" android:layout_marginRight="9dp" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" app:actualImageScaleType="6" style="?attr/listitem_usericon"/>
        <TextView android:textSize="12dp" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/tv_username" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:maxLength="15" android:layout_toRightOf="@+id/iv_userhead" android:layout_alignTop="@+id/iv_userhead" style="?attr/msg_left"/>
        <RelativeLayout android:id="@+id/imageContent" android:paddingLeft="18dp" android:paddingTop="2dp" android:paddingRight="12dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_marginRight="52dp" android:layout_toRightOf="@+id/iv_userhead" android:layout_below="@+id/tv_username" style="?attr/msg_left">
            <TextView android:textSize="15dp" android:textColor="#63625e" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:includeFontPadding="false"/>
            <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/image" android:layout_width="58dp" android:layout_height="58dp" android:layout_marginTop="10dp" android:layout_below="@+id/title" android:layout_alignParentLeft="true" app:actualImageScaleType="6" app:roundedCornerRadius="4dp"/>
            <TextView android:textSize="12dp" android:textColor="#969696" android:ellipsize="end" android:id="@+id/content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:lines="4" android:includeFontPadding="false" android:layout_toRightOf="@+id/image" android:layout_alignTop="@+id/image"/>
            <View android:id="@+id/invite_view" android:background="#cccccc" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="8dp" android:layout_below="@+id/image"/>
            <TextView android:textSize="14dp" android:textColor="#3d3d42" android:gravity="center" android:id="@+id/join" android:layout_width="match_parent" android:layout_height="35dp" android:layout_marginTop="9dp" android:text="申请加入" android:layout_below="@+id/content"/>
        </RelativeLayout>
    </RelativeLayout>
    <TextView android:textSize="9dp" android:gravity="center_vertical" android:layout_gravity="left" android:id="@+id/id_msg_source" android:layout_width="wrap_content" android:layout_height="16dp" android:layout_marginLeft="76dp" android:layout_marginTop="9dp" android:text="来自附近1.0km" style="?attr/im_msg_source"/>
</LinearLayout>
