<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:SettingItem="http://schemas.android.com/apk/res/qsbk.app" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:paddingBottom="@dimen/chat_list_bottom" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="12sp" android:layout_gravity="center_horizontal" android:id="@+id/sendDate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" style="?attr/msg_publish_time"/>
    <RelativeLayout android:gravity="center_vertical" android:id="@+id/container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="20dp" android:layout_marginBottom="2dp">
        <com.facebook.drawee.view.SimpleDraweeView android:layout_gravity="center" android:id="@+id/iv_userhead" android:clickable="true" android:layout_width="@dimen/middle_user_icon" android:layout_height="@dimen/middle_user_icon" android:layout_marginLeft="14dp" android:layout_marginRight="9dp" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" app:actualImageScaleType="6" style="?attr/listitem_usericon"/>
        <RelativeLayout android:id="@+id/msgContainer" android:paddingLeft="6dp" android:paddingTop="2dp" android:paddingRight="2dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="52dp" android:layout_toRightOf="@+id/iv_userhead" android:layout_alignTop="@+id/iv_userhead" style="?attr/msg_left">
            <RelativeLayout android:id="@+id/imageContainer" android:layout_width="58dp" android:layout_height="84dp" android:layout_marginLeft="12dp" android:layout_centerVertical="true">
                <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/coverImage" android:layout_width="50dp" android:layout_height="50dp" android:layout_centerVertical="true" app:actualImageScaleType="6" app:roundedCornerRadius="3dp"/>
            </RelativeLayout>
            <TextView android:ellipsize="end" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/tvBrief" android:paddingRight="17dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginTop="9dp" android:minWidth="85dp" android:text="恭喜您获得【持之以恒】银勋章！点击查看详情" android:maxLines="3" android:layout_toRightOf="@+id/imageContainer" android:layout_centerVertical="true" android:lineSpacingExtra="2dp" style="?attr/qiushi_im_msg_left"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
