<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:SettingItem="http://schemas.android.com/apk/res/qsbk.app" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:paddingBottom="@dimen/chat_list_bottom" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="12dp" android:layout_gravity="center_horizontal" android:id="@+id/sendDate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" style="?attr/msg_publish_time"/>
    <RelativeLayout android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="20dp" android:layout_marginBottom="2dp">
        <com.facebook.drawee.view.SimpleDraweeView android:layout_gravity="center" android:id="@+id/iv_userhead" android:clickable="true" android:layout_width="@dimen/middle_user_icon" android:layout_height="@dimen/middle_user_icon" android:layout_marginLeft="14dp" android:layout_marginRight="9dp" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" app:actualImageScaleType="6" style="?attr/listitem_usericon"/>
        <RelativeLayout android:id="@+id/imageContent" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/iv_userhead" android:layout_alignTop="@+id/iv_userhead" style="?attr/msg_left">
            <ImageButton android:id="@+id/playVoice" android:background="@null" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="13dp" android:scaleType="centerInside" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:contentDescription="@string/play_voice"/>
            <TextView android:textSize="@dimen/g_txt_small" android:id="@+id/voice" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="17dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="?attr/msg_left"/>
            <RelativeLayout android:id="@+id/loadingLayout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignLeft="@+id/voice" android:layout_alignTop="@+id/voice" android:layout_alignRight="@+id/voice" android:layout_alignBottom="@+id/voice">
                <qsbk.app.widget.RangedProgressTextView android:textColor="@color/white" android:gravity="center" android:id="@+id/progressText" android:background="@drawable/progress_clip" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
                <qsbk.app.widget.BreathTextView android:textColor="@color/white" android:gravity="center" android:id="@+id/breathTextView" android:background="@drawable/im_chatting_item_msg_image_right_loading" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <View android:id="@+id/voiceReadState" android:background="@drawable/found_item_tips" android:visibility="gone" android:layout_width="10dp" android:layout_height="10dp" android:layout_marginLeft="5dp" android:layout_toRightOf="@+id/imageContent" android:layout_alignTop="@+id/iv_userhead"/>
    </RelativeLayout>
    <TextView android:textSize="9dp" android:gravity="center_vertical" android:layout_gravity="left" android:id="@+id/id_msg_source" android:layout_width="wrap_content" android:layout_height="16dp" android:layout_marginLeft="76dp" android:layout_marginTop="9dp" android:text="来自附近1.0km" style="?attr/im_msg_source"/>
</LinearLayout>
