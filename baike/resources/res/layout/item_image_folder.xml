<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:SettingItem="http://schemas.android.com/apk/res/qsbk.app" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:padding="10dp" android:layout_width="match_parent" android:layout_height="70dp">
    <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/image_folder_image" android:layout_width="50dp" android:layout_height="50dp" android:layout_marginLeft="7dp" app:actualImageScaleType="6"/>
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_toRightOf="@+id/image_folder_image" android:layout_centerVertical="true">
        <TextView android:textSize="16dp" android:textColor="#333333" android:id="@+id/image_folder_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="文件夹"/>
        <TextView android:textSize="13dp" android:textColor="#888888" android:id="@+id/image_folder_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="1张"/>
    </LinearLayout>
</RelativeLayout>
