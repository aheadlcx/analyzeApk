<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:SettingItem="http://schemas.android.com/apk/res/qsbk.app" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:paddingBottom="@dimen/chat_list_bottom" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="12sp" android:layout_gravity="center_horizontal" android:id="@+id/sendDate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" style="?attr/msg_publish_time"/>
    <RelativeLayout android:gravity="center_vertical" android:id="@+id/container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="5dp">
        <com.facebook.drawee.view.SimpleDraweeView android:layout_gravity="center" android:id="@+id/iv_userhead" android:clickable="true" android:layout_width="@dimen/middle_user_icon" android:layout_height="@dimen/middle_user_icon" android:layout_marginLeft="14dp" android:layout_marginRight="9dp" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" app:actualImageScaleType="6" style="?attr/listitem_usericon"/>
        <RelativeLayout android:id="@+id/msgContainer" android:paddingLeft="6dp" android:paddingTop="10dp" android:paddingRight="2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_marginRight="52dp" android:layout_toRightOf="@+id/iv_userhead" style="?attr/msg_left">
            <TextView android:ellipsize="end" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/content" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="40dp" android:text="争取下次中奖" android:maxLines="4" android:lineSpacingExtra="2dp" style="?attr/qiushi_im_msg_left"/>
            <View android:id="@+id/duobao_view" android:background="#0d000000" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="5dp" android:layout_below="@+id/content"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="40dp" android:layout_below="@+id/duobao_view">
                <TextView android:textColor="#66667b" android:gravity="center" android:id="@+id/btn" android:layout_width="0dp" android:layout_height="match_parent" android:text="参与红包讨论" android:layout_weight="1"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
