<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:SettingItem="http://schemas.android.com/apk/res/qsbk.app" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:paddingBottom="@dimen/chat_list_bottom" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="12sp" android:id="@+id/sendDate" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_centerHorizontal="true" style="?attr/msg_publish_time"/>
    <RelativeLayout android:id="@+id/laisee_container" android:background="@drawable/messager_right_laisee" android:paddingRight="12dp" android:layout_width="match_parent" android:layout_height="78dp" android:layout_marginLeft="120dp" android:layout_marginTop="10dp" android:layout_marginRight="15dp" android:layout_below="@+id/sendDate">
        <ImageView android:id="@+id/iv_laisee" android:layout_width="30dp" android:layout_height="36dp" android:layout_marginLeft="16dp" android:layout_marginTop="11dp" android:src="@drawable/ic_laisee_im"/>
        <TextView android:textSize="15sp" android:textColor="@color/white" android:ellipsize="end" android:id="@+id/content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="10dp" android:text="恭喜发财" android:maxLines="1" android:layout_toRightOf="@+id/iv_laisee"/>
        <TextView android:textSize="12sp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:text="领取红包" android:layout_below="@+id/content" android:layout_alignLeft="@+id/content"/>
        <TextView android:textSize="10sp" android:textColor="#8f8f95" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginBottom="6dp" android:text="糗百红包" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>
