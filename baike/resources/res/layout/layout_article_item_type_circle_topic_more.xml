<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:SettingItem="http://schemas.android.com/apk/res/qsbk.app" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:paddingLeft="16dp" android:paddingRight="16dp" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" style="?attr/article_item_bg">
        <ImageView android:id="@+id/image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:src="@drawable/ic_discuss"/>
        <TextView android:textSize="18sp" android:textColor="?attr/color_black" android:ellipsize="end" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="nisfasf阿斯顿发生大是大非暗室逢灯沙发垫asf" android:maxLines="1" android:layout_toRightOf="@+id/image" android:layout_alignTop="@+id/image"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/content_container" android:background="@drawable/shape_gray_border" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="14dp" android:layout_below="@+id/image">
            <qsbk.app.widget.QBImageView android:id="@+id/cover" android:layout_width="90dp" android:layout_height="90dp" app:roundedCornerRadius="5dp" app:roundTopLeft="true" app:roundTopRight="false" app:roundBottomRight="false" app:roundBottomLeft="true"/>
            <TextView android:textSize="18sp" android:textColor="?attr/color_black" android:ellipsize="end" android:gravity="center" android:id="@+id/content" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="match_parent" android:maxLines="3"/>
        </LinearLayout>
        <LinearLayout android:gravity="left|center_vertical|center_horizontal|center" android:orientation="horizontal" android:id="@+id/more" android:layout_width="match_parent" android:layout_height="40dp" android:layout_below="@+id/content_container">
            <qsbk.app.widget.QBImageView android:id="@+id/arrow_double" android:layout_width="wrap_content" android:layout_height="match_parent" android:scaleType="center"/>
            <TextView android:textSize="12sp" android:textColor="?attr/color_gray" android:ellipsize="end" android:gravity="left|center_vertical|center_horizontal|center" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="9dp" android:text="查看更多糗友圈话题"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
