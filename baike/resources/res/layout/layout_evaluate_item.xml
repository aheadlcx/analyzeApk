<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:SettingItem="http://schemas.android.com/apk/res/qsbk.app" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_gravity="center_horizontal" android:background="?attr/evaluateBg" android:paddingBottom="25dp" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginBottom="4dp">
        <TextView android:textSize="@dimen/g_txt_big" android:gravity="center_horizontal" android:id="@+id/evaluate_message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/evaluate_title" android:layout_centerHorizontal="true" style="?attr/evaluateTitle"/>
        <RelativeLayout android:id="@+id/evaluate_group" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/evaluate_message" android:layout_centerHorizontal="true">
            <ImageView android:id="@+id/evaluate_face" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_centerHorizontal="true" style="?attr/evaluateFace"/>
            <qsbk.app.widget.EasyRatingBar android:id="@+id/evaluate_bar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="103dp" android:layout_centerHorizontal="true" app:count="5" app:space="10dp" style="?attr/evaluateRating"/>
            <TextView android:textSize="@dimen/g_txt_small" android:gravity="center_horizontal" android:id="@+id/evaluate_tips" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="请选择星级后提交您的评分。" android:layout_below="@+id/evaluate_bar" android:layout_centerHorizontal="true" style="?attr/evaluateTitle"/>
        </RelativeLayout>
        <ImageView android:id="@+id/evaluate_result" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_below="@+id/evaluate_message" android:layout_centerHorizontal="true" style="?attr/evaluateFace"/>
        <TextView android:enabled="false" android:textSize="@dimen/g_txt_small" android:gravity="center" android:id="@+id/evaluate_submit" android:layout_width="188dp" android:layout_height="36dp" android:layout_marginTop="15dp" android:text="提 交" android:layout_below="@+id/evaluate_group" android:layout_centerHorizontal="true" style="?attr/evaluateSubmit"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/layerMask" android:background="@drawable/edit_info_items_card_mask" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="4dp"/>
</FrameLayout>
