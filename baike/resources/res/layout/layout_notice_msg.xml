<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:SettingItem="http://schemas.android.com/apk/res/qsbk.app" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="77dp" style="?attr/nearby_list_item_bg">
    <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/avatar" android:layout_width="@dimen/large_user_icon" android:layout_height="@dimen/large_user_icon" android:layout_marginLeft="17dp" android:layout_marginRight="14dp" android:layout_centerVertical="true" app:actualImageScaleType="0"/>
    <TextView android:id="@+id/name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:layout_marginRight="14dp" android:layout_toRightOf="@+id/avatar" style="?attr/nearby_list_item_name"/>
    <LinearLayout android:orientation="vertical" android:paddingRight="14dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_marginBottom="4dp" android:layout_toRightOf="@+id/avatar" android:layout_below="@+id/name">
        <TextView android:textSize="12dp" android:textColor="#969696" android:ellipsize="end" android:id="@+id/info" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
        <TextView android:textSize="14dp" android:textColor="#63625e" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/msg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:singleLine="true" android:drawableLeft="@drawable/group_attention" android:drawablePadding="5dp"/>
    </LinearLayout>
    <TextView android:textSize="12dp" android:textColor="#969696" android:id="@+id/time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginRight="14dp" android:layout_alignParentRight="true"/>
    <View android:id="@+id/divider" android:background="#ededed" android:layout_width="match_parent" android:layout_height="1dp" android:layout_alignParentBottom="true"/>
</RelativeLayout>
