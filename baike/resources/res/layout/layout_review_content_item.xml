<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:SettingItem="http://schemas.android.com/apk/res/qsbk.app" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/content_container" android:layout_width="match_parent" android:layout_height="match_parent">
    <qsbk.app.widget.MyScrollView android:id="@+id/scrollview" android:paddingLeft="6dp" android:paddingRight="6dp" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true" android:layout_alignParentTop="true">
        <LinearLayout android:orientation="vertical" android:paddingLeft="5dp" android:paddingRight="5dp" android:paddingBottom="56dp" android:layout_width="match_parent" android:layout_height="match_parent">
            <View android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="10dp"/>
            <LinearLayout android:orientation="vertical" android:background="?attr/item_bg" android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView android:textSize="@dimen/review_card_text" android:id="@+id/content_txt" android:paddingLeft="@dimen/padding_medium" android:paddingTop="@dimen/padding_medium" android:paddingRight="@dimen/padding_medium" android:paddingBottom="@dimen/padding_medium" android:layout_width="match_parent" android:layout_height="wrap_content" style="?attr/review_card_text"/>
                <RelativeLayout android:id="@+id/content_img_and_loading" android:paddingBottom="3dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <qsbk.app.video.VideoPlayerView android:id="@+id/videoView" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignLeft="@+id/content_img" android:layout_alignTop="@+id/content_img" android:layout_alignRight="@+id/content_img" android:layout_alignBottom="@+id/content_img"/>
                    <ImageView android:id="@+id/content_img" android:layout_width="match_parent" android:layout_height="wrap_content" android:scaleType="fitXY" android:layout_alignParentTop="true"/>
                    <ProgressBar android:id="@+id/progressbar" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="100" android:indeterminate="true" android:layout_alignLeft="@+id/content_img" android:layout_alignTop="@+id/content_img" android:layout_alignRight="@+id/content_img" android:layout_alignParentTop="true" android:layout_centerHorizontal="true" style="?attr/progressbar_image_loading"/>
                    <ProgressBar android:id="@+id/video_progress" android:visibility="gone" android:layout_width="46dp" android:layout_height="46dp" android:max="100" android:indeterminate="true" android:layout_centerInParent="true" style="?attr/video_loading_progress"/>
                    <ImageView android:id="@+id/play_video" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/video_play_selector" android:scaleType="center" android:layout_alignLeft="@+id/content_img" android:layout_alignTop="@+id/content_img" android:layout_alignRight="@+id/content_img" android:layout_alignBottom="@+id/content_img" android:layout_centerInParent="true"/>
                </RelativeLayout>
                <TextView android:textSize="@dimen/tag" android:ellipsize="end" android:id="@+id/tagContent" android:paddingTop="4dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginRight="12dp" android:singleLine="true" style="?attr/tag"/>
            </LinearLayout>
        </LinearLayout>
    </qsbk.app.widget.MyScrollView>
    <ImageView android:id="@+id/review_seal_pass" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="35dp" android:layout_marginBottom="70dp" android:src="@drawable/review_seal_pass" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true"/>
    <ImageView android:id="@+id/review_seal_no_pass" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="35dp" android:layout_marginBottom="70dp" android:src="@drawable/review_seal_no_pass" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
</RelativeLayout>
