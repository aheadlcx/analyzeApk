<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:SettingItem="http://schemas.android.com/apk/res/qsbk.app" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@null" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:id="@+id/divider" android:layout_width="match_parent" android:layout_height="8dp" android:layout_alignParentTop="true"/>
    <qsbk.app.widget.DiggerBar android:gravity="center_vertical" android:id="@+id/diggerbar" android:paddingTop="15dp" android:paddingRight="16dp" android:paddingBottom="3dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="30dp" android:layout_below="@+id/divider" android:layout_alignWithParentIfMissing="true"/>
    <RelativeLayout android:layout_gravity="center_horizontal" android:id="@+id/mainLayout" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/diggerbar" style="?attr/article_item_bg">
        <RelativeLayout android:id="@+id/userInfo" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/profile_item_default_margin" android:layout_marginTop="12dp" android:layout_marginBottom="-7dp" android:layout_alignParentLeft="true" android:layout_alignParentTop="true">
            <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/userIcon" android:layout_width="@dimen/middle_user_icon" android:layout_height="@dimen/middle_user_icon" android:layout_alignParentLeft="true" android:contentDescription="@string/description_user_avatar" style="@style/day_listitem_usericon"/>
            <LinearLayout android:orientation="horizontal" android:id="@+id/cmt_more" android:paddingLeft="@dimen/padding_small" android:paddingRight="@dimen/padding_medium" android:paddingBottom="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignTop="@+id/userIcon" android:layout_alignParentRight="true">
                <TextView android:textSize="@dimen/g_txt_small" android:textColor="#ffffff" android:gravity="center" android:id="@+id/state" android:layout_width="60dp" android:layout_height="19dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:id="@+id/userNameContainer" android:layout_width="wrap_content" android:layout_height="19dp" android:layout_marginLeft="@dimen/padding_small" android:layout_toRightOf="@+id/userIcon" android:layout_alignTop="@+id/userIcon">
                <TextView android:textSize="@dimen/cmt_user_name" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/userName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="测试账号" android:singleLine="true" android:lineSpacingExtra="0px" style="?attr/listitem_content"/>
            </LinearLayout>
            <RelativeLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/padding_small" android:layout_marginRight="@dimen/padding_medium" android:layout_toRightOf="@+id/userIcon" android:layout_below="@+id/userNameContainer" android:layout_alignWithParentIfMissing="true">
                <TextView android:textSize="@dimen/cmt_user_name" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="测试账号" android:singleLine="true" android:layout_alignParentLeft="true" android:lineSpacingExtra="0px" style="?attr/listitem_content"/>
                <TextView android:textSize="@dimen/g_txt_small" android:textColor="#ffffff" android:gravity="center" android:id="@+id/state_msg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true"/>
                <TextView android:textSize="@dimen/g_txt_small" android:id="@+id/type" android:focusable="false" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" style="?attr/listitem_comment"/>
            </RelativeLayout>
        </RelativeLayout>
        <FrameLayout android:id="@+id/contentLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/profile_item_default_margin" android:layout_marginTop="19dp" android:layout_marginRight="@dimen/profile_item_default_margin" android:layout_below="@+id/userInfo" android:layout_alignParentLeft="true" android:layout_alignWithParentIfMissing="true">
            <qsbk.app.widget.ObservableTextView android:ellipsize="end" android:id="@+id/content" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="10" android:lineSpacingExtra="30dp" android:lineSpacingMultiplier="0" style="?attr/listitem_content"/>
        </FrameLayout>
        <FrameLayout android:id="@+id/media_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/profile_item_default_margin" android:layout_marginTop="6dp" android:layout_marginRight="@dimen/profile_item_default_margin" android:layout_below="@+id/contentLayout" android:layout_alignParentLeft="true" android:layout_alignWithParentIfMissing="true">
            <RelativeLayout android:id="@+id/imageLayout" android:background="@color/black" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/image" android:drawingCacheQuality="low" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="60dp" android:layout_centerInParent="true" android:contentDescription="@null"/>
                <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/imageTip" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:scaleType="center" android:layout_alignTop="@+id/image" android:layout_alignBottom="@+id/image" android:layout_centerInParent="true"/>
                <qsbk.app.video.SimpleVideoPlayerView android:id="@+id/videoView" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignLeft="@+id/image" android:layout_alignTop="@+id/image" android:layout_alignRight="@+id/image" android:layout_alignBottom="@+id/image" android:layout_centerInParent="true"/>
                <qsbk.app.widget.NightModeMaskView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignTop="@+id/image" android:layout_alignBottom="@+id/image"/>
                <ProgressBar android:id="@+id/progress" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="100" android:indeterminate="true" android:layout_alignLeft="@+id/image" android:layout_alignTop="@+id/image" android:layout_alignRight="@+id/image" style="?attr/progressbar_image_loading"/>
                <ProgressBar android:id="@+id/video_progress" android:visibility="gone" android:layout_width="46dp" android:layout_height="46dp" android:max="100" android:indeterminate="true" android:layout_centerInParent="true" style="?attr/video_loading_progress"/>
                <TextView android:textColor="#ad9883" android:gravity="center" android:layout_gravity="center" android:id="@+id/imageLoading" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="点击加载图片" android:layout_alignLeft="@+id/image" android:layout_alignTop="@+id/image" android:layout_alignRight="@+id/image" android:layout_alignBottom="@+id/image"/>
                <ImageView android:id="@+id/play_video" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/video_play_selector" android:layout_centerInParent="true"/>
                <ImageView android:id="@+id/gif_tag" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="5dp" android:src="@drawable/ic_gif_tag"/>
                <TextView android:textSize="12dp" android:textColor="#ffffff" android:id="@+id/duration" android:paddingRight="6dp" android:paddingBottom="3dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="12:48" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
                <ImageView android:id="@+id/video_play_flag" android:paddingRight="6dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/video_vol" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <qsbk.app.widget.QiushiImageLayout android:id="@+id/qiushi_image_layout" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </FrameLayout>
        <RelativeLayout android:id="@+id/points_and_comments_count_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/profile_item_default_margin" android:layout_marginTop="10dp" android:layout_below="@+id/media_layout">
            <TextView android:textSize="13sp" android:id="@+id/funny" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="好笑 " android:layout_alignParentLeft="true" style="?attr/listitem_comment"/>
            <qsbk.app.ticker.TickerView android:textSize="13dp" android:id="@+id/points_and_comments_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/funny" android:layout_alignTop="@+id/funny" style="?attr/listitem_comment"/>
            <TextView android:textSize="13sp" android:id="@+id/comment_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/points_and_comments_count" android:layout_alignTop="@+id/points_and_comments_count" style="?attr/listitem_comment"/>
            <TextView android:textSize="13dp" android:id="@+id/loop" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/location" android:layout_toRightOf="@+id/comment_count" android:layout_alignTop="@+id/points_and_comments_count" android:layout_alignWithParentIfMissing="true" style="?attr/listitem_comment"/>
            <TextView android:textSize="13dp" android:textColor="@r$color/g_txt_small" android:id="@+id/location" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/profile_item_default_margin" android:drawableLeft="@drawable/ic_location_small" android:drawablePadding="8dp" android:layout_alignTop="@+id/points_and_comments_count" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/operation_bar" android:layout_width="match_parent" android:layout_height="63dp" android:layout_marginLeft="10dp" android:layout_below="@+id/points_and_comments_count_layout">
            <qsbk.app.widget.SupportOrNotView android:id="@+id/support_or_not" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="9dp"/>
            <ImageButton android:id="@+id/user_comment" android:background="@drawable/operation_support_bg_selector" android:focusable="false" android:layout_width="63dp" android:layout_height="match_parent" android:layout_marginRight="9dp" android:scaleType="fitXY" style="?attr/article_comment"/>
            <View android:background="@null" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            <ImageButton android:layout_gravity="right" android:id="@+id/collection_icon" android:tag="enable" android:background="@drawable/operation_support_bg_selector" android:focusable="false" android:visibility="gone" android:layout_width="63dp" android:layout_height="match_parent" android:scaleType="fitXY" style="?attr/article_more"/>
            <ImageView android:layout_gravity="right" android:id="@+id/delete" android:layout_width="63dp" android:layout_height="match_parent" android:src="?attr/my_qiushi_more" android:scaleType="fitXY" android:layout_alignParentRight="true" android:contentDescription="@null"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/layerMask" android:background="@drawable/edit_info_items_card_mask" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="4dp"/>
</RelativeLayout>
