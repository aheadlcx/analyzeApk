<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:SettingItem="http://schemas.android.com/apk/res/qsbk.app" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="90dp" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/live_image" android:layout_width="50dp" android:layout_height="50dp" android:layout_marginTop="12dp" android:layout_centerHorizontal="true" app:actualImageScaleType="5"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/ll_free_num" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="14dp" android:layout_marginTop="4dp">
            <TextView android:textSize="@dimen/live_text_8sp" android:textColor="#202020" android:gravity="center" android:background="@drawable/bg_gift_free_num_tips" android:paddingLeft="2dp" android:visibility="visible" android:layout_width="0dp" android:layout_height="match_parent" android:minWidth="22dp" android:text="剩余" android:layout_weight="1"/>
            <TextView android:textSize="@dimen/live_text_8sp" android:textColor="#fddb2e" android:gravity="center" android:id="@+id/live_gift_free_num" android:background="@drawable/bg_gift_free_num" android:visibility="visible" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="-1dp" android:minWidth="22dp" android:text="5" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/ll_price" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/live_text_10sp" android:textColor="#fddb2e" android:ellipsize="end" android:id="@+id/live_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="10" android:singleLine="true"/>
            <ImageView android:id="@+id/live_price_diamond" android:layout_width="9dp" android:layout_height="9dp" android:layout_marginLeft="1dp" android:layout_marginTop="6dp" android:src="@drawable/live_gift_diamond"/>
        </LinearLayout>
        <TextView android:textSize="@dimen/live_text_10sp" android:textColor="#9b9b9b" android:ellipsize="end" android:id="@+id/live_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:text="免费" android:singleLine="true"/>
    </LinearLayout>
    <ImageView android:layout_gravity="top|right|center_vertical|center_horizontal|center" android:id="@+id/live_checkbox" android:background="@drawable/live_gift_checkbox" android:layout_width="17dp" android:layout_height="17dp" android:layout_marginTop="11dp" android:layout_marginRight="3dp"/>
</FrameLayout>
