<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:SettingItem="http://schemas.android.com/apk/res/qsbk.app" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:id="@+id/ll_live_end" android:background="@color/black_75_percent_transparent" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="@dimen/live_text_22sp" android:textColor="@color/white" android:ellipsize="end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="45dp" android:text="@string/live_ended" android:singleLine="true"/>
    <RelativeLayout android:gravity="center" android:orientation="vertical" android:id="@+id/layout_live_data" android:layout_width="200dp" android:layout_height="wrap_content" android:layout_marginBottom="40dp">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true">
            <TextView android:textSize="@dimen/live_text_20sp" android:textColor="@color/white" android:ellipsize="end" android:id="@+id/tv_live_duration" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="7dp" android:text="00 : 00" android:singleLine="true"/>
            <TextView android:textSize="@dimen/live_text_15sp" android:textColor="@color/transparent_60_percent_white" android:ellipsize="end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/live_duration" android:singleLine="true"/>
            <TextView android:textSize="@dimen/live_text_20sp" android:textColor="@color/white" android:ellipsize="end" android:id="@+id/tv_live_like_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="40dp" android:layout_marginBottom="7dp" android:text="0" android:singleLine="true"/>
            <TextView android:textSize="@dimen/live_text_15sp" android:textColor="@color/transparent_60_percent_white" android:ellipsize="end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/live_like_count" android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true">
            <TextView android:textSize="@dimen/live_text_20sp" android:textColor="@color/white" android:ellipsize="end" android:id="@+id/tv_live_user_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="7dp" android:text="0" android:singleLine="true"/>
            <TextView android:textSize="@dimen/live_text_15sp" android:textColor="@color/transparent_60_percent_white" android:ellipsize="end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/live_user_count" android:singleLine="true"/>
            <TextView android:textSize="@dimen/live_text_20sp" android:textColor="@color/white" android:ellipsize="end" android:id="@+id/tv_live_gift_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="40dp" android:layout_marginBottom="7dp" android:text="0" android:singleLine="true"/>
            <TextView android:textSize="@dimen/live_text_15sp" android:textColor="@color/transparent_60_percent_white" android:ellipsize="end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/live_received_gift_count" android:singleLine="true"/>
        </LinearLayout>
    </RelativeLayout>
    <Button android:textSize="@dimen/live_text_14sp" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/btn_confirm" android:background="@drawable/live_close_btn" android:layout_width="200dp" android:layout_height="48dp" android:text="@string/setting_confirm"/>
</LinearLayout>
