<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:SettingItem="http://schemas.android.com/apk/res/qsbk.app" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <FrameLayout android:layout_gravity="center" android:orientation="vertical" android:background="@drawable/live_red_envelopes_bg" android:layout_width="302dp" android:layout_height="438dp">
        <LinearLayout android:gravity="bottom|center_vertical|center_horizontal|center" android:layout_gravity="bottom" android:orientation="vertical" android:id="@+id/ll_content" android:background="@drawable/live_red_envelopes_unfold" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="20sp" android:textColor="#fff688" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/live_red_envelopes_rob_tips"/>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="100sp" android:textColor="#fff688" android:id="@+id/tv_diamond" android:paddingLeft="35dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="6" android:lines="1"/>
                <ImageView android:layout_gravity="bottom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginBottom="28dp" android:src="@drawable/live_red_envelopes_diamond_large"/>
            </LinearLayout>
            <Button android:textSize="@dimen/live_text_14sp" android:textColor="@color/white" android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/btn_view_others" android:background="@drawable/live_red_envelopes_btn_normal" android:layout_width="238dp" android:layout_height="70dp" android:text="@string/live_red_envelopes_view_others"/>
            <TextView android:textSize="@dimen/live_text_9sp" android:textColor="@color/white" android:gravity="center" android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/tv_tips" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_marginBottom="16dp" android:maxWidth="218dp" android:text="@string/live_red_envelopes_rob_success" android:alpha="0.8"/>
        </LinearLayout>
        <LinearLayout android:gravity="bottom|center_vertical|center_horizontal|center" android:layout_gravity="bottom" android:orientation="vertical" android:id="@+id/ll_failed" android:background="@drawable/live_red_envelopes_fold" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="30sp" android:textColor="#fff688" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="135dp" android:text="@string/live_red_envelopes_failed"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_record" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="18dp" android:layout_marginTop="62dp" android:layout_marginRight="18dp">
            <TextView android:textSize="12sp" android:textColor="#fff688" android:gravity="center" android:id="@+id/tv_size" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp"/>
            <qsbk.app.core.widget.RefreshRecyclerView android:id="@+id/recyclerview" android:layout_width="match_parent" android:layout_height="match_parent"/>
        </LinearLayout>
        <TextView android:textSize="38sp" android:textColor="#fff688" android:ellipsize="middle" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="48dp" android:maxWidth="220dp" android:text="@string/live_red_envelopes_title" android:singleLine="true"/>
        <ImageView android:layout_gravity="top|right|center_vertical|center_horizontal|center" android:id="@+id/iv_close" android:background="@color/transparent" android:padding="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/live_red_envelopes_close" android:scaleType="centerInside"/>
        <ImageView android:layout_gravity="top|left|center_vertical|center_horizontal|center" android:id="@+id/iv_up" android:background="@color/transparent" android:padding="16dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/live_red_envelopes_up" android:scaleType="centerInside"/>
    </FrameLayout>
</FrameLayout>
