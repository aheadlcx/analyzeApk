<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:SettingItem="http://schemas.android.com/apk/res/qsbk.app" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/bg" android:background="@color/black" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <com.facebook.drawee.view.SimpleDraweeView android:layout_gravity="center" android:id="@+id/iv_avatar" android:layout_width="50dp" android:layout_height="50dp"/>
    <com.facebook.drawee.view.SimpleDraweeView android:layout_gravity="center_horizontal" android:id="@+id/iv_anim" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <qsbk.app.core.widget.FrameAnimationView android:layout_gravity="center" android:id="@+id/iv_frame_anim" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitCenter"/>
    <TextView android:textSize="@dimen/live_text_10sp" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/tv_desc" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/ll_enter_info" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/iv_market_avatar" android:layout_width="20dp" android:layout_height="20dp"/>
        <TextView android:textSize="10sp" android:textColor="@color/white" android:ellipsize="end" android:id="@+id/tv_market_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:maxWidth="60dp"/>
        <TextView android:textSize="@dimen/live_text_10sp" android:textColor="@color/white" android:id="@+id/tv_market_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="领着舞狮登场"/>
    </LinearLayout>
    <com.opensource.svgaplayer.SVGAImageView android:id="@+id/iv_svga" android:background="@color/transparent" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitCenter" app:antiAlias="true"/>
</FrameLayout>
