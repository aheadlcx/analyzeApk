<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:SettingItem="http://schemas.android.com/apk/res/qsbk.app" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="60dp">
        <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp">
            <TextView android:textSize="@dimen/live_text_14sp" android:textColor="#ffb0abb7" android:id="@+id/tv_day" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="今天"/>
            <TextView android:textSize="@dimen/live_text_14sp" android:textColor="#ffb0abb7" android:id="@+id/tv_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="20:00"/>
        </LinearLayout>
        <TextView android:textSize="@dimen/live_text_20sp" android:textColor="#ff41364f" android:layout_gravity="center_vertical" android:id="@+id/tv_money" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="35dp" android:text="40元" android:layout_weight="1"/>
        <TextView android:textSize="@dimen/live_text_14sp" android:gravity="right|center_vertical|center_horizontal|center" android:layout_gravity="center_vertical" android:id="@+id/tv_result" android:paddingRight="12dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/pay_withdraw_record_fail" android:layout_weight="2"/>
    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="1dp"/>
</LinearLayout>
