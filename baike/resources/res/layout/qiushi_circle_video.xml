<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:SettingItem="http://schemas.android.com/apk/res/qsbk.app" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@null" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/content_relative" android:layout_width="match_parent" android:layout_height="wrap_content">
        <View android:id="@+id/divider" android:layout_width="match_parent" android:layout_height="8dp" android:layout_alignParentTop="true"/>
        <RelativeLayout android:layout_gravity="center_horizontal" android:id="@+id/mainLayout" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/divider" style="?attr/article_item_bg">
            <RelativeLayout android:id="@+id/userInfo" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/profile_item_default_margin" android:layout_marginTop="12dp" android:layout_marginRight="@dimen/profile_item_default_margin" android:layout_alignParentLeft="true" android:layout_alignParentTop="true">
                <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/userIcon" android:layout_width="@dimen/middle_user_icon" android:layout_height="@dimen/middle_user_icon" android:layout_alignParentLeft="true" android:contentDescription="@string/description_user_avatar" app:actualImageScaleType="6" app:roundAsCircle="true" style="@style/day_listitem_usericon"/>
                <TextView android:textSize="@dimen/g_txt_small" android:textColor="#969696" android:id="@+id/type" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableLeft="@drawable/qiushi_circle_video" android:drawablePadding="5dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                <TextView android:id="@+id/userName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="11dp" android:layout_toLeftOf="@+id/type" android:layout_toRightOf="@+id/userIcon" android:layout_centerVertical="true" style="?attr/listitem_username"/>
            </RelativeLayout>
            <FrameLayout android:id="@+id/contentLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/profile_item_default_margin" android:layout_marginTop="@dimen/profile_item_default_margin" android:layout_marginRight="@dimen/profile_item_default_margin" android:layout_below="@+id/userInfo" android:layout_alignParentLeft="true" android:layout_alignWithParentIfMissing="true">
                <TextView android:id="@+id/content" android:paddingBottom="2dp" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:lineSpacingExtra="30dp" android:lineSpacingMultiplier="0" style="?attr/listitem_content"/>
            </FrameLayout>
            <RelativeLayout android:id="@+id/imageLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/profile_item_default_margin" android:layout_marginTop="6dp" android:layout_marginRight="@dimen/profile_item_default_margin" android:layout_below="@+id/contentLayout" android:layout_alignParentLeft="true" android:layout_alignWithParentIfMissing="true">
                <qsbk.app.video.SimpleVideoPlayerView android:id="@+id/videoView" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignLeft="@+id/image" android:layout_alignTop="@+id/image" android:layout_alignRight="@+id/image" android:layout_alignBottom="@+id/image" app:maxHeight="400dp"/>
                <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/image" android:drawingCacheQuality="low" android:layout_width="match_parent" android:layout_height="wrap_content" android:contentDescription="@null" app:actualImageScaleType="0"/>
                <qsbk.app.widget.NightModeMaskView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignTop="@+id/image" android:layout_alignBottom="@+id/image"/>
                <ProgressBar android:id="@+id/video_progress" android:visibility="gone" android:layout_width="46dp" android:layout_height="46dp" android:max="100" android:indeterminate="true" android:layout_centerInParent="true" style="?attr/video_loading_progress"/>
                <ImageView android:id="@+id/play_video" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/video_play_selector" android:layout_centerInParent="true"/>
                <ImageView android:id="@+id/video_play_flag" android:paddingRight="6dp" android:paddingBottom="5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/video_vol" android:layout_alignRight="@+id/videoView" android:layout_alignBottom="@+id/videoView"/>
                <TextView android:textSize="12dp" android:textColor="#ffffff" android:id="@+id/duration" android:paddingRight="6dp" android:paddingBottom="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="12:48" android:layout_alignRight="@+id/videoView" android:layout_alignBottom="@+id/videoView"/>
            </RelativeLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/operation_bar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/profile_item_default_margin" android:layout_below="@+id/imageLayout">
                <TextView android:textSize="@dimen/small_fonts" android:textColor="?attr/color_gray" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/more_video" android:layout_width="match_parent" android:layout_height="50dp" android:text="查看更多视频" android:drawablePadding="5dp"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/layerMask" android:background="@drawable/edit_info_items_card_mask" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="4dp"/>
</FrameLayout>
