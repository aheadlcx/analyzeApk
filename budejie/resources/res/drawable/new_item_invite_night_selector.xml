<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <solid android:color="#7d2e2e2e"/>
            <stroke android:width="1dp" android:color="#7da3301b"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <solid android:color="@color/list_item_bg_black"/>
            <stroke android:width="1dp" android:color="@color/main_red_black"/>
        </shape>
    </item>
</selector>
