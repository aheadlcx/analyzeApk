<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient android:startColor="@color/transparent" android:endColor="@color/transparent" android:angle="270" android:centerY="0.45"/>
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <shape>
            <gradient android:startColor="@color/transparent" android:endColor="@color/transparent" android:angle="270" android:centerY="0.45"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient android:startColor="@color/red" android:endColor="@color/red" android:angle="270" android:centerY="0.45"/>
            </shape>
        </clip>
    </item>
</layer-list>
