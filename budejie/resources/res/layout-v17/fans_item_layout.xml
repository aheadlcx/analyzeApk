<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fresco="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/top" android:background="?attr/common_press" android:paddingLeft="6dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_alignParentStart="true">
        <RelativeLayout android:gravity="center" android:id="@+id/relayout" android:layout_width="55dp" android:layout_height="55dp" android:layout_margin="5dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true">
            <com.androidex.widget.asyncimage.AsyncImageView android:id="@+id/writerProfile" android:layout_width="42dp" android:layout_height="42dp"/>
        </RelativeLayout>
        <TextView android:textSize="@dimen/font_11" android:textColor="#ffffff" android:gravity="center" android:id="@+id/unread_num" android:background="@drawable/funs_item_num_bg" android:layout_width="17dp" android:layout_height="17dp" android:text="11" android:layout_alignTop="@+id/relayout" android:layout_alignRight="@+id/relayout"/>
        <RelativeLayout android:gravity="center_vertical" android:paddingLeft="5dp" android:layout_width="match_parent" android:layout_height="42dp" android:layout_toLeftOf="@+id/bt_layout" android:layout_toRightOf="@+id/relayout" android:layout_centerVertical="true">
            <TextView android:textSize="@dimen/font_15" android:textColor="?attr/myinfo_post_num_prompt_text_color" android:id="@+id/nickname" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
            <com.androidex.widget.asyncimage.AsyncImageView android:id="@+id/iv_members_mark" android:visibility="gone" android:layout_width="15dp" android:layout_height="15dp" android:layout_marginLeft="5dp" android:layout_toRightOf="@+id/nickname" android:layout_alignTop="@+id/nickname" android:layout_alignBottom="@+id/nickname"/>
            <TextView android:textSize="@dimen/font_12" android:textColor="#b2b2b2" android:gravity="center" android:id="@+id/time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="12:00" android:singleLine="true" android:layout_alignTop="@+id/nickname" android:layout_alignBottom="@+id/nickname" android:layout_alignParentRight="true"/>
            <TextView android:textSize="@dimen/font_13" android:textColor="?attr/suggested_follows_number" android:id="@+id/pro" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:singleLine="true" android:layout_below="@+id/nickname" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/bt_layout" android:paddingLeft="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:layout_alignParentRight="true" android:layout_centerVertical="true">
            <TextView android:textSize="@dimen/font_14" android:textColor="#bbbbbb" android:gravity="center" android:id="@+id/cancel_btn" android:background="?attr/follows_shape_item_unadd_bg" android:layout_width="50dp" android:layout_height="24dp" android:singleLine="true" android:layout_centerVertical="true"/>
            <TextView android:textSize="@dimen/font_14" android:textColor="?attr/theme_red_color" android:gravity="center" android:id="@+id/add_btn" android:background="?attr/follows_shape_item_bg" android:layout_width="50dp" android:layout_height="24dp" android:singleLine="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
