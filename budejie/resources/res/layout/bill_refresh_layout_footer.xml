<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fresco="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="40dp">
    <FrameLayout android:id="@+id/fl" android:layout_width="30dp" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_centerVertical="true">
        <ImageView android:layout_gravity="center" android:id="@+id/pull_to_load_image" android:background="@drawable/refresh_arrow_up" android:layout_width="wrap_content" android:layout_height="wrap_content" android:contentDescription="@null"/>
        <ProgressBar android:layout_gravity="center" android:id="@+id/pull_to_load_progress" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" style="?android:attr/progressBarStyleSmall"/>
    </FrameLayout>
    <TextView android:textSize="12sp" android:textColor="@android:color/darker_gray" android:id="@+id/pull_to_load_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="上接加载全部观众" android:layout_centerInParent="true"/>
</RelativeLayout>
