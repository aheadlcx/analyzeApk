<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fresco="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="#f2f2f2" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="@color/book_reader_white" android:paddingLeft="14dp" android:paddingRight="14dp" android:layout_width="match_parent" android:layout_height="47dp" android:layout_marginTop="52dp">
        <TextView android:textSize="16sp" android:textColor="@color/book_reader_common_text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="自动购买" android:layout_centerVertical="true"/>
        <Switch android:id="@+id/book_reader_auto_buy_switch" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:background="@color/book_reader_white" android:paddingLeft="14dp" android:paddingRight="14dp" android:layout_width="match_parent" android:layout_height="47dp" android:layout_marginTop="5dp">
        <TextView android:textSize="16sp" android:textColor="@color/book_reader_common_text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="仿真翻页" android:layout_centerVertical="true"/>
        <Switch android:id="@+id/book_reader_page_mode_switch" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/book_reader_clear_cache_layout" android:background="@drawable/book_reader_common_press_selector" android:paddingLeft="14dp" android:paddingRight="14dp" android:layout_width="match_parent" android:layout_height="47dp" android:layout_marginTop="5dp">
        <TextView android:textSize="16sp" android:textColor="@color/book_reader_common_text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="清理缓存" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/book_reader_arrow_image_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/book_reader_right_arrow_image" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="14sp" android:textColor="#7c7c7c" android:id="@+id/book_reader_cache_text_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:layout_toLeftOf="@+id/book_reader_arrow_image_view" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <Button android:textSize="18sp" android:textColor="@color/book_reader_main_color" android:layout_gravity="center_horizontal" android:id="@+id/book_reader_login_out_button" android:background="@drawable/book_reader_common_press_selector" android:layout_width="300dp" android:layout_height="45dp" android:layout_marginTop="48dp" android:text="退出登录"/>
</LinearLayout>
