<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fresco="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="59dp">
        <ImageView android:id="@+id/book_reader_flower_money" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/book_reader_horizontal_margin" android:src="@drawable/book_reader_flower_money_image" android:layout_centerVertical="true"/>
        <TextView android:textSize="14sp" android:textColor="@color/book_reader_chapter_item_night_color" android:id="@+id/book_reader_real_point" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_toRightOf="@+id/book_reader_flower_money" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/book_reader_flower" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:src="@drawable/book_reader_flower_image" android:layout_toRightOf="@+id/book_reader_real_point" android:layout_centerVertical="true"/>
        <TextView android:textSize="14sp" android:textColor="@color/book_reader_chapter_item_night_color" android:id="@+id/book_reader_false_point" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_toRightOf="@+id/book_reader_flower" android:layout_centerVertical="true"/>
        <TextView android:textSize="14sp" android:textColor="@color/book_reader_bdj_recharge_text_selector" android:gravity="center" android:id="@+id/book_reader_recharge_text_view" android:background="@drawable/book_reader_recharge_text_selector" android:paddingLeft="13dp" android:paddingTop="2dp" android:paddingRight="13dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="25dp" android:layout_marginRight="@dimen/book_reader_horizontal_margin" android:minWidth="63dp" android:text="@string/book_reader_login_text" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:id="@+id/book_reader_divide_view" android:background="#f2f2f2" android:layout_width="match_parent" android:layout_height="8dp"/>
</LinearLayout>
