<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fresco="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/phone_icon_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="50dp">
        <ImageView android:id="@+id/phone_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/change_phone_icon" android:layout_centerHorizontal="true"/>
        <TextView android:gravity="center_horizontal" android:id="@+id/phone_num" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="您的手机号是：" android:layout_below="@+id/phone_icon" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <Button android:textColor="?attr/change_phone_text_color" android:gravity="center" android:id="@+id/change_phone" android:background="?attr/change_phone_text_bg" android:layout_width="280dp" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:text="更换手机号" android:layout_below="@+id/phone_icon_layout" android:layout_centerHorizontal="true"/>
</RelativeLayout>
