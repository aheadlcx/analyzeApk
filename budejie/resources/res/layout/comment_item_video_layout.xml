<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fresco="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/black" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:orientation="vertical" android:id="@+id/video_layout" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerInParent="true">
        <com.budejie.www.activity.video.VideoView android:id="@+id/video_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout android:background="@drawable/detail_title_layout_bg_tran" android:clickable="true" android:layout_width="match_parent" android:layout_height="@dimen/navigation_height" android:layout_alignParentTop="true">
        <ImageView android:id="@+id/detail_title_back" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:src="@drawable/detail_title_back_tran_selector" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/detail_title_like" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:src="@drawable/detail_title_like_tran_selector" android:layout_toRightOf="@+id/detail_title_back" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/detail_title_hate" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:src="@drawable/detail_title_hate_tran_selector" android:layout_toRightOf="@+id/detail_title_like" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/detail_title_download" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:src="@drawable/detail_title_download_tran_selector" android:layout_toRightOf="@+id/detail_title_hate" android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>
