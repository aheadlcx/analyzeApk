<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fresco="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="#eaeaea" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:id="@+id/TitleGapLayout" android:background="@color/main_red" android:layout_width="match_parent" android:layout_height="@dimen/navigation_height_gap"/>
    <RelativeLayout android:background="@drawable/title_bar_bg" android:paddingTop="6dp" android:paddingBottom="6dp" android:layout_width="match_parent" android:layout_height="@dimen/navigation_height" android:layout_marginBottom="10dp">
        <TextView android:textSize="@dimen/title_left_right_font_size" android:textColor="@drawable/title_left_back_font_style" android:gravity="center" android:layout_gravity="center" android:id="@+id/back" android:background="@color/transparent" android:paddingLeft="10dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/title_back" android:drawableLeft="@drawable/collect_left_btn"/>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="60dp" android:layout_centerInParent="true">
            <Button android:textSize="15sp" android:textColor="#000" android:id="@+id/buttonDownloading" android:background="@drawable/title_button_left_normal" android:layout_width="100dp" android:layout_height="wrap_content" android:text="@string/download_downloading"/>
            <Button android:textSize="15sp" android:textColor="#000" android:id="@+id/buttonDownloaded" android:background="@drawable/title_button_right_normal" android:layout_width="100dp" android:layout_height="wrap_content" android:text="@string/download_downloaded"/>
        </LinearLayout>
        <TextView android:gravity="center" android:id="@+id/delAll" android:background="@drawable/download_delbutton_selecter" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ListView android:id="@+id/downloadedListView" android:fadingEdge="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:divider="#e5e5e5" android:dividerHeight="1dp"/>
    <ListView android:id="@+id/downloadingListView" android:fadingEdge="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:divider="#e5e5e5" android:dividerHeight="1dp"/>
</LinearLayout>
