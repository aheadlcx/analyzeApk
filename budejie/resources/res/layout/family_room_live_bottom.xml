<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fresco="http://schemas.android.com/apk/res-auto" android:gravity="center_vertical" android:background="#80000000" android:layout_width="match_parent" android:layout_height="43dp">
    <cn.v6.sixrooms.widgets.phone.CircleImageView android:id="@+id/iv_head" android:layout_width="35dp" android:layout_height="35dp" android:layout_marginLeft="15dp" android:src="@drawable/rooms_third_common_head_portrait" android:layout_centerVertical="true"/>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="9dp" android:layout_toRightOf="@+id/iv_head" android:layout_centerVertical="true">
        <TextView android:textSize="12sp" android:textColor="#ffffff" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/tv_name">
            <TextView android:textSize="10sp" android:textColor="#ccffffff" android:id="@+id/tv_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="家族徽章：" android:singleLine="true"/>
            <ImageView android:id="@+id/iv_icon" android:layout_width="25dp" android:layout_height="11dp" android:layout_toRightOf="@+id/tv_icon"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
