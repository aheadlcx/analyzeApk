<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fresco="http://schemas.android.com/apk/res-auto" xmlns:app="http://schemas.android.com/apk/res/com.budejie.www" android:id="@+id/bottom_voice_recoder_layout" android:background="?attr/comment_recoder_bg" android:layout_width="match_parent" android:layout_height="242dp">
    <ImageView android:id="@+id/voice_recoder_cancel" android:background="?attr/comment_recoder_cancel" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="16dp" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
    <ImageView android:id="@+id/voice_recoder_iv" android:background="?attr/comment_recoder_play" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
    <com.budejie.www.activity.view.CircleProgressBar android:id="@+id/voice_recoder_play_progress" android:layout_width="102dp" android:layout_height="102dp" android:layout_centerInParent="true" app:progressbarColor="?attr/comment_recoder_send_color" app:progressbarBgColor="?attr/comment_recoder_Progress_bg" app:progressBarThickness="2dp"/>
    <TextView android:textSize="15sp" android:textColor="?attr/comment_recoder_text_color" android:id="@+id/voice_recoder_normal_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="14dp" android:text="点击录音" android:layout_below="@+id/voice_recoder_iv" android:layout_centerHorizontal="true"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/voice_recoder_starting_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="14dp" android:layout_above="@+id/voice_recoder_iv" android:layout_centerHorizontal="true">
        <com.budejie.www.widget.VoiceLineView android:id="@+id/voic_line_right_to_left" android:background="@android:color/transparent" android:layout_width="150dp" android:layout_height="14dp" fresco:voiceLine="?attr/comment_recoder_text_color" fresco:rectMoveDirection="2" fresco:maxVolume="100" fresco:viewMode="1" fresco:sensibility="4" fresco:fineness="3"/>
        <TextView android:textSize="14sp" android:textColor="?attr/comment_recoder_text_color" android:gravity="center" android:id="@+id/voice_recoder_starting_time" android:paddingBottom="2dp" android:layout_width="45dp" android:layout_height="wrap_content" android:text="0:00" android:includeFontPadding="false"/>
        <com.budejie.www.widget.VoiceLineView android:id="@+id/voic_line_left_to_right" android:background="@android:color/transparent" android:layout_width="150dp" android:layout_height="14dp" fresco:voiceLine="?attr/comment_recoder_text_color" fresco:rectMoveDirection="1" fresco:maxVolume="100" fresco:viewMode="1" fresco:sensibility="4" fresco:fineness="3"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/voice_recoder_complete" android:layout_width="match_parent" android:layout_height="44dp" android:layout_alignParentBottom="true">
        <View android:background="?attr/comment_recoder_divider" android:layout_width="match_parent" android:layout_height="1dp"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textSize="16sp" android:textColor="?attr/comment_recoder_text_color" android:gravity="center" android:id="@+id/voice_recoder_reset" android:background="?attr/comment_recoder_text_bg" android:layout_width="match_parent" android:layout_height="match_parent" android:text="重录" android:layout_weight="1"/>
            <View android:background="?attr/comment_recoder_divider" android:layout_width="1dp" android:layout_height="match_parent"/>
            <TextView android:textSize="16sp" android:textColor="?attr/comment_recoder_send_color" android:gravity="center" android:id="@+id/voice_recoder_send" android:background="?attr/comment_recoder_text_bg" android:layout_width="match_parent" android:layout_height="match_parent" android:text="发送" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
