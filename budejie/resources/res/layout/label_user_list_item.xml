        </RelativeLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_below="@+id/user_name_layout">
            <TextView android:textSize="@dimen/font_12" android:textColor="?attr/plate_list_item_color" android:id="@+id/comment_text_view" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
