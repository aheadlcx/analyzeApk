            <TextView android:textSize="@dimen/font_12" android:textColor="?attr/plate_list_item_color" android:id="@+id/post_number_text_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp"/>
        </LinearLayout>
    </RelativeLayout>
    <View android:background="?attr/divider_horizontal_bg" android:layout_width="match_parent" android:layout_height="@dimen/divide_line_height" android:layout_alignLeft="@+id/portrait_image_view" android:layout_alignParentBottom="true"/>
</RelativeLayout>
