<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fresco="http://schemas.android.com/apk/res-auto" xmlns:app="http://schemas.android.com/apk/res/com.budejie.www" android:id="@+id/oauthweibo_layout" android:background="@drawable/login_register_bg" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/phoneLayout" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_alignParentTop="true">
            <TextView android:textSize="@dimen/font_16" android:textColor="@color/login_input_default_color" android:id="@+id/skip_text" android:padding="7dp" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="@string/skip" android:layout_alignParentLeft="true" android:onClick="skip$Click"/>
            <ImageView android:id="@+id/close_view" android:padding="7dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:src="@drawable/cancel_login" android:layout_alignParentLeft="true"/>
            <TextView android:textSize="@dimen/font_16" android:textColor="@color/login_tips_text_color" android:id="@+id/loginToRegister" android:padding="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="@string/new_phone_num_reg" android:layout_alignParentRight="true" android:onClick="oauthPhoneReg$Click"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/login_register_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <LinearLayout android:orientation="vertical" android:id="@+id/phone_login" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true">
                <com.budejie.www.widget.erroredittext.SetErrorAbleEditText android:textSize="@dimen/font_16" android:textColor="@color/login_input_text_color" android:textColorHint="@color/login_input_text_color_no_focus" android:layout_gravity="center_horizontal" android:id="@+id/login_phonenumber" android:background="@drawable/login_register_edit_bg" android:paddingLeft="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="@string/phone" android:singleLine="true" android:maxLength="11" android:inputType="phone" android:textCursorDrawable="@null"/>
                <com.budejie.www.widget.erroredittext.SetErrorAbleEditText android:textSize="@dimen/font_16" android:textColor="@color/login_input_text_color" android:textColorHint="@color/login_input_text_color_no_focus" android:layout_gravity="center_horizontal" android:id="@+id/login_password" android:background="@drawable/login_register_psw_edit_bg" android:paddingLeft="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="@string/new_password" android:singleLine="true" android:maxLength="24" android:inputType="textPassword" android:textCursorDrawable="@null"/>
                <LinearLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp">
                    <TextView android:textSize="@dimen/font_16" android:textColor="@color/login_input_default_color" android:layout_gravity="center_horizontal" android:id="@+id/login_btn" android:background="@drawable/login_button_selector" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:textSize="@dimen/font_16" android:textColor="@color/login_tips_text_color" android:layout_gravity="right" android:id="@+id/loginToRetrievepsw" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginRight="30dp" android:text="忘记密码?"/>
                </LinearLayout>
                <View android:layout_width="match_parent" android:layout_height="120dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/phone_register" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true">
                <com.budejie.www.widget.erroredittext.SetErrorAbleEditText android:textSize="@dimen/font_16" android:textColor="@color/login_input_text_color" android:textColorHint="@color/login_input_text_color_no_focus" android:layout_gravity="center_horizontal" android:id="@+id/register_phonenumber" android:background="@drawable/login_register_edit_bg" android:paddingLeft="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="@string/phone_input_hint" android:singleLine="true" android:maxLength="11" android:inputType="phone" android:textCursorDrawable="@null"/>
                <com.budejie.www.widget.erroredittext.SetErrorAbleEditText android:textSize="@dimen/font_16" android:textColor="@color/login_input_text_color" android:textColorHint="@color/login_input_text_color_no_focus" android:layout_gravity="center_horizontal" android:id="@+id/register_password" android:background="@drawable/login_register_psw_edit_bg" android:paddingLeft="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="@string/phone_edit_hint_psw" android:singleLine="true" android:maxLength="24" android:inputType="textPassword" android:textCursorDrawable="@null"/>
                <LinearLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp">
                    <TextView android:textSize="@dimen/font_16" android:textColor="@color/login_input_default_color" android:layout_gravity="center_horizontal" android:id="@+id/register_btn" android:background="@drawable/register_button_selector" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>
                <View android:layout_width="match_parent" android:layout_height="120dp"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:layout_above="@+id/speed_login_layout">
            <ImageView android:id="@+id/next_left" android:background="@drawable/view_left_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:layout_toLeftOf="@+id/to_next_btn" android:layout_centerVertical="true"/>
            <TextView android:textSize="@dimen/font_13" android:textColor="#ffffff" android:id="@+id/to_next_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/speed_login" android:layout_centerHorizontal="true"/>
            <ImageView android:id="@+id/next_right" android:background="@drawable/view_right_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_toRightOf="@+id/to_next_btn" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/speed_login_layout" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="50dp" android:layout_alignParentBottom="true">
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/qZoneLayout" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:onClick="oauthQzone$Click">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/login_register_qq_selector"/>
                <TextView android:textSize="@dimen/font_13" android:textColor="@color/speed_login_color_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="QQ登录"/>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/sinaLayout" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:onClick="oauthSina$Click">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/login_register_sina_selector"/>
                <TextView android:textSize="@dimen/font_13" android:textColor="@color/speed_login_color_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="微博登录"/>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/tencentLayout" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:onClick="oauthTenct$Click">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/login_register_tencent_selector"/>
                <TextView android:textSize="@dimen/font_13" android:textColor="@color/speed_login_color_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="腾讯微博"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/weixinLoginLayout" android:background="@drawable/login_bg" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="16sp" android:textColor="@color/white" android:gravity="center_vertical" android:id="@+id/LoginBackTextView" android:layout_width="60dp" android:layout_height="42dp" android:layout_marginLeft="11dp" android:layout_marginTop="20dp" android:text="取消"/>
        <ImageView android:id="@+id/imageView2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="107dp" android:src="@drawable/login_logo" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="86dp" android:layout_alignParentBottom="true">
            <TextView android:layout_gravity="center_horizontal" android:id="@+id/login_weixin_btn" android:background="@drawable/login_weixin_button_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="9dp"/>
            <TextView android:layout_gravity="center_horizontal" android:id="@+id/login_qq_btn" android:background="@drawable/login_qq_button_selector" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/OtherLoginLayout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="39dp" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:onClick="OtherLoginLayout$Click">
            <TextView android:textColor="@drawable/login_arrow_text_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="其他登录方式"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:src="@drawable/login_arrow_selector"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
