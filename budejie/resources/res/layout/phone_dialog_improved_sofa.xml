<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fresco="http://schemas.android.com/apk/res-auto" xmlns:app="http://schemas.android.com/apk/res/com.budejie.www" android:gravity="center" android:id="@+id/rootView" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:background="@drawable/rooms_third_dialog_bg" android:layout_width="@dimen/Improved_Dialog_RootView_Width" android:layout_height="wrap_content">
        <TextView android:textSize="19sp" android:textStyle="bold" android:textColor="@android:color/black" android:layout_gravity="center_horizontal" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="提示"/>
        <TextView android:textSize="14sp" android:textColor="#777777" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="15dp" android:layout_marginRight="20dp" android:text="@string/room_sofa_dialog_content"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp">
            <TextView android:textSize="14sp" android:textColor="#666666" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="数量: "/>
            <EditText android:textSize="14sp" android:textColor="#333333" android:gravity="center" android:id="@+id/et_num" android:background="@drawable/stroke_red" android:padding="5dp" android:layout_width="108dp" android:layout_height="33dp" android:singleLine="true" android:inputType="number"/>
        </LinearLayout>
        <ImageView android:layout_marginTop="22dp" style="@style/onePxLine"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="50dp">
            <TextView android:textSize="15sp" android:textColor="#ff666666" android:gravity="center" android:id="@+id/cancel" android:background="@drawable/rooms_third_dialog_left_button_selecter" android:layout_width="0dp" android:layout_height="match_parent" android:text="取消" android:layout_weight="1"/>
            <ImageView android:id="@+id/onePxLineVertical" style="@style/onePxGrayLineVertical"/>
            <TextView android:textSize="15sp" android:textColor="#f43e26" android:gravity="center" android:id="@+id/ok" android:background="@drawable/rooms_third_dialog_right_button_selecter" android:layout_width="0dp" android:layout_height="match_parent" android:text="抢座" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
