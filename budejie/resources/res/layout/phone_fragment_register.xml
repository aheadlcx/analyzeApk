<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fresco="http://schemas.android.com/apk/res-auto" xmlns:app="http://schemas.android.com/apk/res/com.budejie.www" android:orientation="vertical" android:background="@color/login_generally_Background" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/id_rl_username" android:paddingLeft="15dp" android:paddingRight="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="18dp">
            <EditText android:textSize="@dimen/text_size_small_mid" android:textColor="#333333" android:textColorHint="@color/bundle_gray_textcolor" android:id="@+id/et_username" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="35dp" android:hint="@string/phone_tip_input_regist_user_len_str" android:singleLine="true" android:maxLength="15"/>
            <ImageView android:id="@+id/id_iv_clean_username" android:padding="10dp" android:visibility="visible" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/phone_del_image_selector" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <ImageView android:layout_marginLeft="@dimen/phone_login_tv_margin_left_v4" android:layout_marginRight="@dimen/phone_login_tv_margin_left_v4" style="@style/onePxLine"/>
        <RelativeLayout android:paddingLeft="15dp" android:paddingRight="7dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="9dp">
            <EditText android:textSize="@dimen/text_size_small_mid" android:textColor="#333333" android:textColorHint="@color/bundle_gray_textcolor" android:id="@+id/et_password" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="35dp" android:hint="@string/phone_tip_input_regist_pwd_len_str" android:singleLine="true" android:maxLength="12" android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ" android:inputType="textPassword"/>
            <cn.v6.sixrooms.widgets.phone.HideOrDisplayThePasswordView android:id="@+id/id_password_show_hide" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <ImageView android:layout_marginLeft="@dimen/phone_login_tv_margin_left_v4" android:layout_marginRight="@dimen/phone_login_tv_margin_left_v4" style="@style/onePxLine"/>
    </LinearLayout>
    <RelativeLayout android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/phone_input_input_verify_code_height_new">
        <cn.v6.sixrooms.widgets.phone.FilterView android:id="@+id/fv_verify_code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/phone_login_tv_margin_left_new" android:layout_centerVertical="true">
            <EditText android:textSize="@dimen/text_size_small_14" android:textColorHint="@color/login_hint_character_color" android:id="@+id/et_verify_code" android:background="@color/transparent" android:layout_width="@dimen/phone_input_et_verify_code_width" android:layout_height="wrap_content" android:hint="@string/hint_verifycode" android:singleLine="true" android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"/>
        </cn.v6.sixrooms.widgets.phone.FilterView>
        <Button android:textSize="@dimen/text_size_small_14" android:textColor="#333333" android:id="@+id/but_change_verify_code" android:background="@drawable/rooms_third_verify_button" android:paddingLeft="@dimen/phone_but_change_verify_code_padding" android:paddingRight="@dimen/phone_but_change_verify_code_padding" android:layout_width="@dimen/eighty_dip" android:layout_height="@dimen/phone_but_change_verify_code_height" android:layout_marginRight="@dimen/phone_login_tv_margin_left_new" android:text="@string/change_verifycode" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <RelativeLayout android:background="@android:color/transparent" android:layout_width="@dimen/seventy_dip" android:layout_height="@dimen/thirty_dip" android:layout_marginRight="10dp" android:layout_toLeftOf="@+id/but_change_verify_code" android:layout_centerVertical="true">
            <WebView android:id="@+id/webView" android:visibility="gone" android:scrollbars="none" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
            <ProgressBar android:id="@+id/pb_load_verify_code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" style="@style/Widget.ProgressBar.Small"/>
        </RelativeLayout>
        <ImageView android:layout_marginLeft="@dimen/phone_login_tv_margin_left_new" android:layout_marginRight="@dimen/phone_login_tv_margin_left_new" android:layout_alignParentBottom="true" style="@style/onePxLine"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:paddingLeft="15dp" android:paddingRight="7dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="9dp">
            <EditText android:textSize="@dimen/text_size_small_mid" android:textColor="#333333" android:textColorHint="#999999" android:id="@+id/id_et_phone_number" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="35dp" android:hint="手机号码" android:singleLine="true" android:maxLength="11" android:inputType="number"/>
            <cn.v6.sixrooms.widgets.phone.GetVerificationCodeView android:id="@+id/id_view_get_verification_code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            <ImageView android:id="@+id/id_iv_clean_phone_number" android:padding="10dp" android:visibility="visible" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:src="@drawable/phone_del_image_selector" android:layout_toLeftOf="@+id/id_view_get_verification_code" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <ImageView android:layout_marginLeft="@dimen/phone_login_tv_margin_left_v4" android:layout_marginRight="@dimen/phone_login_tv_margin_left_v4" style="@style/onePxLine"/>
        <RelativeLayout android:paddingLeft="15dp" android:paddingRight="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="9dp">
            <EditText android:textSize="@dimen/text_size_small_mid" android:textColor="#333333" android:textColorHint="#999999" android:id="@+id/id_et_phone_code" android:background="@color/transparent" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="35dp" android:layout_marginTop="2dp" android:hint="请输入验证码" android:singleLine="true" android:maxLength="15"/>
            <ImageView android:id="@+id/id_iv_clean_code" android:padding="10dp" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/phone_del_image_selector" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <ImageView android:layout_marginLeft="@dimen/phone_login_tv_margin_left_v4" android:layout_marginTop="-3dp" android:layout_marginRight="@dimen/phone_login_tv_margin_left_v4" style="@style/onePxLine"/>
    </LinearLayout>
    <Button android:textSize="@dimen/text_size_middle_min_17" android:textColor="@color/rooms_fourth_login_button_textcolor" android:id="@+id/but_register" android:background="@drawable/ic_rooms_fourth_login_selector" android:layout_width="match_parent" android:layout_height="@dimen/button_height_new" android:layout_marginLeft="15dp" android:layout_marginTop="@dimen/phone_input_verify_code_margin_top_new" android:layout_marginRight="15dp" android:text="完成"/>
</LinearLayout>
