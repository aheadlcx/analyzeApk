<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fresco="http://schemas.android.com/apk/res-auto" xmlns:app="http://schemas.android.com/apk/res/com.budejie.www" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <RelativeLayout android:background="@drawable/pig_pk_duck_bg" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:textSize="12sp" android:textColor="@color/white" android:id="@+id/count_down" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="28dp" android:text="00:00" android:drawableLeft="@drawable/count_down_icon" android:drawablePadding="4dp" android:layout_centerHorizontal="true"/>
        <RelativeLayout android:id="@+id/pig_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_below="@+id/count_down">
            <ImageView android:id="@+id/pig_icon" android:padding="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pig_icon" android:layout_centerVertical="true"/>
            <TextView android:textSize="10sp" android:textColor="@color/white" android:ellipsize="end" android:id="@+id/pig_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="猪头" android:maxLines="1" android:maxEms="5" android:layout_toRightOf="@+id/pig_icon"/>
            <TextView android:textSize="11sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/pig_num" android:background="@drawable/pig_pk_duck_num_bg" android:layout_width="63dp" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="100000个" android:layout_toRightOf="@+id/pig_icon" android:layout_below="@+id/pig_name"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_below="@+id/pig_layout">
            <ImageView android:id="@+id/duck_icon" android:padding="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/duck_icon" android:layout_centerVertical="true"/>
            <TextView android:textSize="10sp" android:textColor="@color/white" android:ellipsize="end" android:id="@+id/duck_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="鸭子" android:maxLines="1" android:maxEms="5" android:layout_toRightOf="@+id/duck_icon"/>
            <TextView android:textSize="11sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/duck_num" android:background="@drawable/pig_pk_duck_num_bg" android:layout_width="63dp" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="100000个" android:layout_toRightOf="@+id/duck_icon" android:layout_below="@+id/duck_name"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
