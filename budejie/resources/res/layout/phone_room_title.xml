<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fresco="http://schemas.android.com/apk/res-auto" xmlns:app="http://schemas.android.com/apk/res/com.budejie.www" android:gravity="center_vertical" android:background="#5c000000" android:layout_width="match_parent" android:layout_height="48dp" android:minHeight="43dp">
    <RelativeLayout android:id="@+id/tv_back" android:clickable="true" android:layout_width="45dp" android:layout_height="match_parent">
        <ImageView android:background="@drawable/default_titlebar_back_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ll_titlePart" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_centerHorizontal="true">
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/text_size_small_max" android:textColor="#ffffff" android:gravity="center" android:id="@+id/tv_live_name" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_wealthrank" android:layout_width="wrap_content" android:layout_height="wrap_content" android:contentDescription="@null"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="-2dp">
            <TextView android:textSize="@dimen/phone_sc_11sp" android:textColor="#ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="房间号: "/>
            <TextView android:textSize="@dimen/phone_sc_11sp" android:textColor="#ffffff" android:id="@+id/tv_room_id" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <TextView android:textSize="@dimen/text_size_middle_min" android:textColor="#d93529" android:gravity="center" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/back" android:drawableLeft="@drawable/rooms_third_room_back" android:drawablePadding="-5dp" android:onClick="back"/>
    <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/ll_room_anchor_votes" android:background="@drawable/ic_rooms_third_vote_total" android:paddingTop="@dimen/changzhan_vote_total_padding_top" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true">
        <TextView android:textSize="@dimen/text_size_small_14" android:textColor="#471f1d" android:gravity="center" android:id="@+id/tv_room_anchor_votes" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="9999999"/>
        <TextView android:textSize="@dimen/text_size_small_min" android:textColor="#471f1d" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="票"/>
    </LinearLayout>
    <ImageView android:id="@+id/iv_fullscreen" android:paddingLeft="15dp" android:paddingRight="15dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/room_full_screen_selector" android:scaleType="center" android:layout_alignParentRight="true"/>
</RelativeLayout>
