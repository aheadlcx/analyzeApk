<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fresco="http://schemas.android.com/apk/res-auto" xmlns:app="http://schemas.android.com/apk/res/com.budejie.www" android:background="?attr/reprint_window_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:id="@+id/TitleGapLayout" android:background="?attr/title_background" android:layout_width="match_parent" android:layout_height="@dimen/navigation_height_gap"/>
    <RelativeLayout android:id="@+id/title_layout" android:background="?attr/title_background" android:layout_width="match_parent" android:layout_height="@dimen/navigation_height" android:layout_below="@+id/TitleGapLayout">
        <TextView android:textColor="?attr/title_text_selector" android:gravity="center" android:id="@+id/cancle_btn" android:paddingLeft="@dimen/margin_8" android:paddingRight="@dimen/margin_20" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/cancel" android:layout_alignParentLeft="true" style="@style/titleBtnStyle"/>
        <TextView android:textSize="19sp" android:textColor="?attr/title_text_selector" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/choose_contact_text" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/title_layout">
        <ListView android:id="@+id/contact_listview" android:scrollbars="none" android:fadingEdge="none" android:layout_width="match_parent" android:layout_height="match_parent" android:listSelector="@android:color/transparent" android:cacheColorHint="@android:color/transparent" android:divider="?attr/choose_contact_item_divider_color" android:dividerHeight="1dp"/>
        <TextView android:textSize="30dp" android:textColor="#ffffffff" android:gravity="center" android:layout_gravity="center" android:id="@+id/dialog" android:background="@drawable/show_head_toast_bg" android:visibility="invisible" android:layout_width="80dp" android:layout_height="80dp"/>
        <com.budejie.www.activity.view.SideBar android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/sidrbar" android:layout_width="30dp" android:layout_height="match_parent" android:layout_marginTop="50dp" android:layout_marginBottom="50dp"/>
    </FrameLayout>
    <RelativeLayout android:id="@+id/search_layout" android:background="?attr/choose_search_layout_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/navigation_height" android:layout_alignParentTop="true">
        <RelativeLayout android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_toLeftOf="@+id/search_cancel" android:layout_centerVertical="true">
            <EditText android:textSize="13sp" android:textColor="?attr/choose_contact_text_color" android:textColorHint="?attr/choose_contact_hint_text_color" android:gravity="center_vertical" android:id="@+id/search_input_box" android:background="?attr/choose_contact_input_box_bg" android:paddingLeft="7dp" android:paddingRight="30dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="7dp" android:layout_marginTop="7dp" android:layout_marginBottom="7dp" android:hint="@string/choose_contact_hint_text" android:singleLine="true" android:drawableLeft="?attr/choose_contact_search_icon" android:drawablePadding="6dp" android:layout_centerVertical="true"/>
            <ImageButton android:id="@+id/search_clear_btn" android:background="@null" android:visibility="gone" android:layout_width="30dp" android:layout_height="@dimen/navigation_height" android:src="?attr/choose_contact_clear_search_text_icon" android:scaleType="centerInside" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView android:textSize="16sp" android:textColor="?attr/choose_contact_cancel_text_color" android:gravity="center" android:id="@+id/search_cancel" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/cancel" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View android:id="@+id/transparent_layout" android:background="?attr/choose_search_no_contacts_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/search_layout"/>
</RelativeLayout>
