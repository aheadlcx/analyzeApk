<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fresco="http://schemas.android.com/apk/res-auto" xmlns:app="http://schemas.android.com/apk/res/com.budejie.www" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/rl_singwar_banner_top" android:background="@drawable/singwar_final_banner_bg_top" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/text_size_small_mid" android:textStyle="bold" android:textColor="@color/white" android:id="@+id/singwar_stage_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="18dp" android:text="总决赛" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/singwar_switch_banner" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="18dp" android:src="@drawable/singwar_switch_up" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rl_singwar_banner_bottom" android:background="@drawable/singwar_final_banner_bg_bottom" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/rl_singwar_banner_top">
        <GridView android:id="@+id/singwar_final_gv" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:listSelector="@color/transparent" android:numColumns="2" android:layout_centerHorizontal="true"/>
        <ImageView android:id="@+id/singwar_final_vote" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/singwar_final_margin_top_grid" android:layout_marginRight="18dp" android:src="@drawable/singwar_final_vote_btn_selector" android:layout_below="@+id/singwar_final_gv" android:layout_alignParentRight="true"/>
        <TextView android:textSize="13sp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="18dp" android:layout_marginTop="@dimen/singwar_final_margin_top_grid" android:layout_marginRight="10dp" android:text="@string/singwar_final_banner_des" android:layout_toLeftOf="@+id/singwar_final_vote" android:layout_below="@+id/singwar_final_gv"/>
    </RelativeLayout>
</RelativeLayout>
