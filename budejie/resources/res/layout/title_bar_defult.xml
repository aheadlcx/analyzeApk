<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fresco="http://schemas.android.com/apk/res-auto" xmlns:app="http://schemas.android.com/apk/res/com.budejie.www" android:layout_gravity="center_vertical" android:id="@+id/titlebar_default" android:background="@drawable/global_title_bg" android:layout_width="match_parent" android:layout_height="@dimen/globalTitleHeight">
    <FrameLayout android:layout_gravity="bottom|left|center_vertical|center_horizontal|center" android:id="@+id/titlebar_left_frame" android:addStatesFromChildren="true" android:layout_width="80dp" android:layout_height="match_parent">
        <TextView android:textSize="@dimen/globalTitleTextSizeSmall" android:textColor="@color/white" android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/titlebar_left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:drawableLeft="@drawable/default_titlebar_back_selector"/>
    </FrameLayout>
    <FrameLayout android:layout_gravity="bottom|right|center_vertical|center_horizontal|center" android:id="@+id/titlebar_right_frame" android:addStatesFromChildren="true" android:layout_width="80dp" android:layout_height="match_parent">
        <TextView android:textSize="@dimen/globalTitleTextSizeSmall" android:textColor="@color/white" android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/titlebar_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp"/>
    </FrameLayout>
    <RelativeLayout android:gravity="center" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <RelativeLayout android:orientation="horizontal" android:id="@+id/ll_title_up" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true">
            <ImageView android:id="@+id/titlebar_title_pic" android:visibility="gone" android:layout_width="36dp" android:layout_height="36dp" android:layout_marginRight="8dp" android:layout_centerVertical="true"/>
            <TextView android:textSize="@dimen/globalTitleTextSizeMainTitle" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/titlebar_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="标题" android:singleLine="true" android:layout_toRightOf="@+id/titlebar_title_pic" android:layout_centerVertical="true"/>
            <TextView android:textSize="10sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/titlebar_title_plus" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:text="（副标题）" android:singleLine="true" android:layout_toRightOf="@+id/titlebar_title" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView android:textSize="10sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/titlebar_title_down" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="下标题" android:singleLine="true" android:layout_below="@+id/ll_title_up" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</FrameLayout>
