<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fresco="http://schemas.android.com/apk/res-auto" xmlns:app="http://schemas.android.com/apk/res/com.budejie.www" android:orientation="vertical" android:background="@color/ttg_theme_color" android:layout_width="match_parent" android:layout_height="wrap_content">
    <cn.tatagou.sdk.view.TtgFitView android:id="@+id/ttg_status_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <RelativeLayout android:id="@+id/ttg_tb_bar" android:layout_width="match_parent" android:layout_height="@dimen/bar_height">
        <cn.tatagou.sdk.view.TitleBarIconTextView android:gravity="center" android:id="@+id/ttg_searchicon" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent"/>
        <cn.tatagou.sdk.view.TitleBackIconTextView android:textSize="20sp" android:textColor="@android:color/white" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/ttg_tv_backup" android:paddingLeft="15dp" android:paddingTop="1dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/ttg_icon_back" android:layout_centerVertical="true"/>
        <TextView android:textSize="@dimen/title_size" android:textColor="@color/ttg_white" android:ellipsize="end" android:gravity="center" android:id="@+id/ttg_tv_title" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="首页" android:maxEms="11" android:singleLine="true" android:layout_centerVertical="true"/>
        <RelativeLayout android:id="@+id/ttg_rl_search" android:background="@drawable/shape_search_edt" android:visibility="visible" android:layout_width="match_parent" android:layout_height="30dp" android:layout_marginRight="15dp" android:layout_centerVertical="true">
            <cn.tatagou.sdk.view.IconTextView android:textColor="#999999" android:gravity="center_vertical" android:id="@+id/ttg_search_icon" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="11dp" android:layout_marginRight="2dp" android:text="@string/ttg_icon_ed_search" android:layout_centerVertical="true"/>
            <EditText android:textSize="14sp" android:textColor="#333333" android:textColorHint="#999999" android:gravity="center_vertical" android:id="@+id/ttg_edt_search" android:background="@null" android:focusableInTouchMode="false" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="2dp" android:hint="搜索商品" android:singleLine="true" android:maxLength="20" android:layout_toLeftOf="@+id/ttg_tv_clear" android:layout_toRightOf="@+id/ttg_search_icon" android:layout_centerVertical="true" android:imeOptions="actionSearch" android:textCursorDrawable="@null"/>
            <cn.tatagou.sdk.view.IconTextView android:textColor="#666666" android:gravity="center_vertical" android:id="@+id/ttg_tv_clear" android:paddingLeft="3dp" android:paddingRight="11dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/ttg_icon_clearcontent" android:layout_alignParentRight="true" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <cn.tatagou.sdk.view.TitleBarIconTextView android:textSize="22sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/ttg_tv_mine_icon" android:paddingLeft="12dp" android:paddingRight="15dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_toLeftOf="@+id/ttg_rl_right_icon"/>
        <RelativeLayout android:id="@+id/ttg_rl_right_icon" android:paddingLeft="15dp" android:paddingRight="15dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_centerVertical="true">
            <cn.tatagou.sdk.view.TitleBarIconTextView android:textSize="22sp" android:textColor="@android:color/white" android:id="@+id/ttg_tv_right_icon" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true"/>
            <cn.tatagou.sdk.view.IconTextView android:textSize="7sp" android:id="@+id/ttg_mycart_circle" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ttg_icon_shop_circle" android:layout_alignTop="@+id/ttg_tv_right_icon"/>
        </RelativeLayout>
    </RelativeLayout>
    <TextView android:id="@+id/ttg_tv_title_line" style="@style/TtgVLine"/>
</LinearLayout>
