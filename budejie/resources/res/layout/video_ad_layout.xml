<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fresco="http://schemas.android.com/apk/res-auto" xmlns:app="http://schemas.android.com/apk/res/com.budejie.www" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/custom_container" android:background="@android:color/black" android:layout_width="match_parent" android:layout_height="match_parent">
        <com.sprite.ads.media.NativeMediaAdView android:id="@+id/mediaview" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
        <TextView android:textSize="13sp" android:textColor="@android:color/white" android:id="@+id/close_btn" android:background="#80000000" android:paddingLeft="6dp" android:paddingTop="3dp" android:paddingRight="6dp" android:paddingBottom="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="关闭" android:layout_alignParentRight="true"/>
        <TextView android:textSize="13sp" android:textColor="@android:color/white" android:id="@+id/text_count_down" android:background="#80000000" android:paddingLeft="6dp" android:paddingTop="3dp" android:paddingRight="6dp" android:paddingBottom="3dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_marginRight="3dp" android:layout_toLeftOf="@+id/close_btn"/>
        <TextView android:textSize="13sp" android:textColor="@android:color/white" android:background="#80000000" android:paddingLeft="6dp" android:paddingTop="3dp" android:paddingRight="6dp" android:paddingBottom="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_marginRight="3dp" android:text="广告" android:layout_toLeftOf="@+id/text_count_down"/>
    </RelativeLayout>
    <TextView android:textColor="@android:color/white" android:gravity="center" android:id="@+id/handle" android:background="#aa000000" android:padding="5dp" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="50dp" android:layout_marginBottom="5dp" android:layout_toRightOf="@+id/ad_info_container" android:layout_alignParentBottom="true"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ad_info_container" android:background="#80000000" android:padding="10dp" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignTop="@+id/handle" android:layout_alignBottom="@+id/handle">
        <com.androidex.widget.asyncimage.AsyncImageView android:layout_gravity="center_vertical" android:id="@+id/img_logo" android:layout_width="30dp" android:layout_height="30dp"/>
        <TextView android:textSize="15sp" android:textColor="@android:color/white" android:id="@+id/app_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp"/>
        <Button android:textSize="15sp" android:textColor="@android:color/white" android:id="@+id/btn_download" android:background="@drawable/ad_download_btn_bg" android:paddingLeft="5dp" android:paddingTop="2dp" android:paddingRight="5dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <TextView android:textSize="16sp" android:gravity="center" android:id="@+id/loading" android:background="@android:color/black" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:text="即将播放广告...
看广告就是支持姐工作"/>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/screen_download_layout" android:background="@android:color/black" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <com.androidex.widget.asyncimage.AsyncImageView android:id="@+id/img_logo_two" android:layout_width="35dp" android:layout_height="35dp"/>
            <TextView android:textSize="18sp" android:textColor="@android:color/white" android:id="@+id/app_name_two" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <Button android:textSize="16sp" android:textColor="@android:color/white" android:id="@+id/app_download_btn" android:background="@drawable/ad_download_btn_bg" android:paddingLeft="10dp" android:paddingTop="3dp" android:paddingRight="10dp" android:paddingBottom="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp"/>
    </LinearLayout>
</RelativeLayout>
