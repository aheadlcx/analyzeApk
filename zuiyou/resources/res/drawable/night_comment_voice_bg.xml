<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/night_god_view_bg"/>
            <stroke android:width="1px" android:color="@color/night_god_view_bg"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/image_placeholder_color"/>
            <stroke android:width="1px" android:color="@color/night_god_view_bg"/>
        </shape>
    </item>
</selector>
