            <View android:id="@+id/hollow_reply_audio_sign" android:background="@drawable/bg_publish_selected_circle" android:visibility="gone" android:layout_width="6dp" android:layout_height="6dp" android:layout_margin="8dp" android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
