    </LinearLayout>
    <cn.dreamtobe.kpswitch.widget.KPSwitchFSPanelLinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/hollow_reply_switch_ll" android:background="@color/color_fffafb" android:visibility="gone" android:layout_width="match_parent" android:layout_height="200dp">
        <include layout="@layout/layout_hollow_sound_audio"/>
    </cn.dreamtobe.kpswitch.widget.KPSwitchFSPanelLinearLayout>
</LinearLayout>
