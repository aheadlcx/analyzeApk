        </LinearLayout>
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:paddingBottom="6dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2">
            <TextView android:textSize="@dimen/F3_text" android:textColor="@color/CT_4" android:gravity="center" android:id="@+id/hollow_create_text_text" android:paddingLeft="24dp" android:paddingRight="24dp" android:layout_width="wrap_content" android:layout_height="0dp" android:text="@string/text_to_say" android:layout_weight="1"/>
            <View android:id="@+id/hollow_create_text_view" android:visibility="invisible" style="@style/hollow_create_indicator"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
