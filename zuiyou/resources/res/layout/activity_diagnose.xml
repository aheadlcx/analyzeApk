<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/rootView" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent" style="@style/RootStyle">
    <RelativeLayout android:layout_gravity="center_horizontal" android:id="@+id/rlDiagnose" android:visibility="visible" android:layout_width="225dp" android:layout_height="match_parent" android:layout_marginTop="@dimen/navbar_height">
        <ImageView android:id="@+id/tvZhanWei" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:src="@drawable/icon_empty_topic_frog" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="15sp" android:textColor="@color/text_main_black" android:gravity="center" android:id="@+id/tvDescriptionTop" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="-9dp" android:layout_below="@+id/tvZhanWei" android:lineSpacingExtra="3dp"/>
        <Button android:textSize="15sp" android:textColor="@color/white" android:id="@+id/bnDiagnose" android:background="@drawable/selector_bg_diagnose" android:visibility="visible" android:layout_width="match_parent" android:layout_height="30dp" android:layout_marginTop="20dp" android:text="诊断网络" android:layout_below="@+id/tvDescriptionTop" android:layout_centerHorizontal="true"/>
        <ProgressBar android:id="@+id/pBar" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:maxHeight="3dp" android:progressDrawable="@drawable/diagnose_progressbar_drawable" android:minHeight="3dp" android:layout_below="@+id/bnDiagnose" android:layout_centerHorizontal="true" style="@style/Widget.ProgressBar.Horizontal"/>
        <TextView android:textSize="12sp" android:textColor="#a5a4a4" android:gravity="center" android:id="@+id/tvDescriptionBottom" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="9dp" android:layout_below="@+id/pBar"/>
        <TextView android:textSize="13sp" android:textColor="#a5a4a4" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="30dp" android:text="请确认图片现在依然无法看到,并确保未改变网络环境和状态" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <LinearLayout android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:orientation="vertical" android:id="@+id/llFinish" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/navbar_height">
        <ImageView android:id="@+id/ivDiagnoseResult" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="60dp" android:src="@drawable/img_diagnose_success"/>
        <TextView android:textSize="15sp" android:textColor="@color/text_main_black" android:gravity="center" android:id="@+id/tvDescriptionResult" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:text="诊断成功,感谢协助"/>
        <Button android:textSize="15sp" android:textColor="@color/white" android:id="@+id/bnRetryOrFinish" android:background="@drawable/selector_bg_diagnose" android:layout_width="105dp" android:layout_height="30dp" android:layout_marginTop="62dp" android:text="完成"/>
    </LinearLayout>
    <cn.xiaochuankeji.tieba.ui.widget.NavigationBar android:id="@+id/navBar" android:layout_width="match_parent" android:layout_height="wrap_content" app:navTitleText="网络诊断" app:navNeedBack="true"/>
</FrameLayout>
