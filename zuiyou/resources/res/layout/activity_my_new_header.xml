        <android.support.v7.widget.AppCompatTextView android:textSize="@dimen/F4_text" android:textColor="@color/CW" android:ellipsize="end" android:id="@+id/member_sign" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1"/>
    </LinearLayout>
    <cn.xiaochuankeji.tieba.ui.widget.image.WebImageView android:id="@+id/member_avatar" android:background="@drawable/bg_avatar_circle" android:padding="1dp" android:focusable="true" android:clickable="true" android:layout_width="54dp" android:layout_height="54dp" android:layout_marginLeft="17.4dp" android:layout_marginBottom="5dp" android:layout_above="@+id/profile" android:layout_alignParentLeft="true" app:actualImageScaleType="2" app:roundAsCircle="true"/>
</RelativeLayout>
