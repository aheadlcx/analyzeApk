<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" style="@style/RootStyle">
    <RelativeLayout android:id="@+id/header" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/nav_height" android:layout_alignParentTop="true">
        <cn.xiaochuankeji.tieba.ui.widget.indicator.MagicIndicator android:orientation="horizontal" android:id="@+id/indicator" android:layout_width="wrap_content" android:layout_height="28dp" android:layout_marginTop="10dp" android:layout_centerHorizontal="true"/>
        <RelativeLayout android:paddingTop="4dp" android:layout_width="50dp" android:layout_height="@dimen/nav_height" android:layout_alignParentRight="true">
            <ImageView android:id="@+id/ic_recommend_more" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/navbar_icon_edit" android:scaleType="center" android:contentDescription="@string/image"/>
            <ImageView android:gravity="center" android:id="@+id/tag_crumb" android:layout_width="6dp" android:layout_height="6dp" android:layout_marginTop="12.5dp" android:layout_marginRight="8dp" android:src="@drawable/icon_badge_dot" android:layout_alignParentRight="true" android:contentDescription="@string/image"/>
        </RelativeLayout>
        <ImageView android:id="@+id/ivSearch" android:paddingTop="2dp" android:layout_width="50dp" android:layout_height="@dimen/nav_height" android:src="@drawable/navbar_icon_search" android:scaleType="center" android:contentDescription="@string/image"/>
        <ImageView android:id="@+id/ivPublishPost" android:background="@color/CB" android:paddingTop="2dp" android:layout_width="50dp" android:layout_height="@dimen/nav_height" android:src="@drawable/navbar_icon_create" android:scaleType="center" android:layout_alignParentRight="true" android:contentDescription="@string/image"/>
    </RelativeLayout>
    <cn.xiaochuankeji.tieba.ui.widget.TBViewPager android:id="@+id/viewpager" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/header"/>
    <ImageView android:id="@+id/home_refresh_view" android:visibility="visible" android:layout_width="64dp" android:layout_height="64dp" android:layout_marginRight="12dp" android:layout_marginBottom="22dp" android:src="@drawable/button_refresh" android:scaleType="center" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:contentDescription="@string/image"/>
</RelativeLayout>
