<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/rootView" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent" style="@style/RootStyle">
    <cn.xiaochuankeji.tieba.ui.widget.NavigationBar android:id="@+id/navBar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true" app:navTitleText="更换手机号" app:navNeedBack="true"/>
    <RelativeLayout android:id="@+id/tip_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/navBar">
        <TextView android:textSize="15dp" android:textColor="@color/CT_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="当前手机号" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="26dp" android:textColor="@color/CM" android:gravity="center_horizontal" android:id="@+id/tv_phone_number" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="50dp" android:text="135****3345" android:layout_centerHorizontal="true"/>
