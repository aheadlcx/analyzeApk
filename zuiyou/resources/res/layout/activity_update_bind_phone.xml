    <Button android:textSize="@dimen/F9_text" android:textColor="@color/CW" android:id="@+id/btn_update_phone" android:background="@drawable/login_blue_selector" android:layout_width="match_parent" android:layout_height="44dp" android:layout_marginLeft="35dp" android:layout_marginTop="78dp" android:layout_marginRight="35dp" android:text="更换手机号" android:layout_below="@+id/tip_text"/>
    <TextView android:textSize="15dp" android:textColor="@color/CT_5" android:gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="29dp" android:text="更换手机号后，原手机号不可用于登录" android:layout_below="@+id/btn_update_phone"/>
</RelativeLayout>
