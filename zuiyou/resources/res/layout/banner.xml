<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/bannerContainer" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.youth.banner.view.BannerViewPager android:id="@+id/bannerViewPager" android:clipChildren="false" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="11dp" android:layout_marginBottom="10dp" android:layout_alignParentBottom="true">
            <LinearLayout android:gravity="center" android:layout_gravity="right" android:orientation="horizontal" android:id="@+id/circleIndicator" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:textColor="#ffffff" android:gravity="center" android:id="@+id/numIndicator" android:background="@drawable/black_background" android:visibility="gone" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="8dp" android:text="1/1" android:layout_alignParentRight="true"/>
            <TextView android:textColor="#ffffff" android:gravity="center_vertical" android:id="@+id/numIndicatorInside" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="1/1"/>
            <LinearLayout android:gravity="right" android:orientation="horizontal" android:id="@+id/indicatorInside" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent"/>
        </FrameLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <LinearLayout android:orientation="horizontal" android:id="@+id/titleView" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true">
                <TextView android:textSize="16sp" android:textColor="#ffffff" android:ellipsize="end" android:gravity="center" android:layout_gravity="center" android:id="@+id/bannerTitle" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="40dp" android:layout_marginRight="40dp" android:text="" android:maxLines="2" android:maxLength="30" android:shadowColor="#88000000" android:shadowDx="0" android:shadowDy="0" android:shadowRadius="8"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <ImageView android:id="@+id/iv_empty" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/banner_empty" android:scaleType="centerCrop"/>
</FrameLayout>
