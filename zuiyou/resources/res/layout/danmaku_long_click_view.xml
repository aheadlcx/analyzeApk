<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:id="@+id/dim_view" android:background="#80000000" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <LinearLayout android:layout_gravity="bottom" android:orientation="vertical" android:id="@+id/layout_sheet_dialog" android:background="@drawable/bg_ugcvideo_danmaku" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="15dp" android:textColor="@color/white" android:gravity="center" android:id="@+id/vReply" android:layout_width="match_parent" android:layout_height="57dp" android:text="回复"/>
        <View android:background="#19ffffff" android:layout_width="match_parent" android:layout_height="1px"/>
        <TextView android:textSize="15dp" android:textColor="@color/white" android:gravity="center" android:id="@+id/vReport" android:layout_width="match_parent" android:layout_height="57dp" android:text="举报"/>
        <View android:background="#19ffffff" android:layout_width="match_parent" android:layout_height="1px"/>
        <TextView android:textSize="15dp" android:textColor="@color/white" android:gravity="center" android:id="@+id/vCancel" android:layout_width="match_parent" android:layout_height="57dp" android:text="取消"/>
    </LinearLayout>
</FrameLayout>
