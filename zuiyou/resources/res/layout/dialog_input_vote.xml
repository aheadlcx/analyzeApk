<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/dialog_container" android:background="@color/CB" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="50dp">
        <ImageView android:id="@+id/dialog_close" android:paddingLeft="18dp" android:layout_width="50dp" android:layout_height="wrap_content" android:src="@drawable/dialog_close" android:scaleType="center" android:layout_centerVertical="true"/>
        <TextView android:textSize="14dp" android:textColor="@color/CT_2" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="投票" android:layout_centerInParent="true"/>
        <TextView android:textSize="14dp" android:textColor="@color/CM" android:id="@+id/tv_add" android:paddingRight="18dp" android:layout_width="50dp" android:layout_height="wrap_content" android:text="添加" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="25dp">
        <EditText android:textSize="14dp" android:textColor="@color/CT_2" android:textColorHint="@color/CT_5" android:id="@+id/et_vote1" android:background="@drawable/edittext_input_url" android:paddingLeft="14dp" android:paddingRight="14dp" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="28dp" android:layout_marginLeft="22dp" android:layout_marginTop="9dp" android:layout_marginRight="22dp" android:singleLine="true" android:layout_centerVertical="true"/>
        <EditText android:textSize="14dp" android:textColor="@color/CT_2" android:textColorHint="@color/CT_5" android:id="@+id/et_vote2" android:background="@drawable/edittext_input_url" android:paddingLeft="14dp" android:paddingRight="14dp" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="28dp" android:layout_marginLeft="22dp" android:layout_marginTop="15dp" android:layout_marginRight="22dp" android:singleLine="true" android:layout_centerVertical="true"/>
        <FrameLayout android:id="@+id/flEditText3Container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="28dp" android:layout_marginLeft="22dp" android:layout_marginTop="15dp" android:layout_marginRight="22dp">
            <EditText android:textSize="14dp" android:textColor="@color/CT_2" android:textColorHint="@color/CT_5" android:id="@+id/et_vote3" android:background="@drawable/edittext_input_url" android:paddingLeft="14dp" android:paddingRight="28dp" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="28dp" android:singleLine="true" android:layout_centerVertical="true"/>
            <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/ivDelete3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:src="@drawable/icon_dialog_clear"/>
        </FrameLayout>
        <FrameLayout android:id="@+id/flEditText4Container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="28dp" android:layout_marginLeft="22dp" android:layout_marginTop="15dp" android:layout_marginRight="22dp">
            <EditText android:textSize="14dp" android:textColor="@color/CT_2" android:textColorHint="@color/CT_5" android:id="@+id/et_vote4" android:background="@drawable/edittext_input_url" android:paddingLeft="14dp" android:paddingRight="28dp" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="28dp" android:singleLine="true" android:layout_centerVertical="true"/>
            <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/ivDelete4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:src="@drawable/icon_dialog_clear"/>
        </FrameLayout>
    </LinearLayout>
    <RelativeLayout android:id="@+id/add_container" android:layout_width="match_parent" android:layout_height="62dp">
        <View android:id="@+id/split_line" android:background="@color/CL" android:layout_width="match_parent" android:layout_height="@dimen/divide_space_1px" android:layout_marginLeft="22dp" android:layout_marginRight="22dp"/>
        <TextView android:textSize="11dp" android:textColor="@color/CT_5" android:ellipsize="end" android:id="@+id/tv_add_vote" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginRight="25dp" android:text="添加一个选项" android:singleLine="true" android:drawableLeft="@drawable/icon_dialog_add" android:drawablePadding="3dp" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
