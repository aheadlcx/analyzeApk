<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="#80000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_gravity="bottom" android:id="@+id/vgActionContainer" android:background="@drawable/fillet" android:layout_width="match_parent" android:layout_height="253dp">
        <RelativeLayout android:id="@+id/tvAdd" android:layout_width="match_parent" android:layout_height="43dp">
            <ImageView android:id="@+id/ivIcon" android:layout_width="26dp" android:layout_height="26dp" android:layout_marginLeft="@dimen/left_right_common_distance" android:src="@drawable/ic_my_favor" android:layout_centerVertical="true"/>
            <TextView android:textSize="@dimen/F3_text" android:textColor="@color/CT_2" android:ellipsize="end" android:id="@+id/tvName" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="13dp" android:text="选择收藏夹" android:singleLine="true" android:layout_toRightOf="@+id/ivIcon" android:layout_centerVertical="true"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/left_right_common_distance" android:src="@drawable/create_favorite" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            <View android:id="@+id/separatar_line" android:background="@color/CL" android:visibility="visible" android:layout_width="match_parent" android:layout_height="@dimen/divide_space_1px" android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <cn.xiaochuankeji.tieba.ui.post.postdetail.PostAlbumQueryListView android:id="@+id/lvPostAlbum" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/tvCancel" android:layout_below="@+id/tvAdd"/>
        <TextView android:textSize="@dimen/F10_text" android:textColor="@color/CT_5" android:ellipsize="end" android:id="@+id/tv_empty_tip" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="击右上角“+”号创建收藏夹~" android:singleLine="true" android:layout_centerInParent="true"/>
        <RelativeLayout android:id="@+id/tvCancel" android:layout_width="match_parent" android:layout_height="43dp" android:layout_alignParentBottom="true">
            <TextView android:textSize="@dimen/F1_text" android:textColor="@color/CT_2" android:ellipsize="end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/cancel" android:singleLine="true" android:layout_centerInParent="true"/>
            <View android:background="@color/CL" android:visibility="visible" android:layout_width="match_parent" android:layout_height="@dimen/divide_space_1px"/>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>
