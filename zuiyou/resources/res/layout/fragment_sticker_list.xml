<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/container" android:background="#bb2c3537" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="50dp">
        <android.support.v7.widget.AppCompatImageView android:layout_gravity="left" android:id="@+id/close" android:padding="16dp" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/ic_sticker_close"/>
