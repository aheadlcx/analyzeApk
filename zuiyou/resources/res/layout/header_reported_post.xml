            <android.support.v7.widget.AppCompatTextView android:textSize="@dimen/F8_text" android:textColor="@color/CM" android:layout_gravity="center" android:id="@+id/proc_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10dp"/>
