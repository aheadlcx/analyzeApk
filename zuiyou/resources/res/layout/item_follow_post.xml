<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/root" android:background="@color/CB" android:paddingTop="13dp" android:paddingBottom="13dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="9dp">
    <TextView android:textSize="@dimen/text_size_14" android:textStyle="bold" android:textColor="@color/CT_2" android:id="@+id/tv_subject" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="13dp" android:layout_marginRight="13dp" android:layout_marginBottom="5dp" android:lineSpacingMultiplier="1.25"/>
    <FrameLayout android:id="@+id/fl_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="7dp" android:layout_marginRight="7dp" android:layout_marginBottom="7dp" android:layout_below="@+id/tv_subject">
        <LinearLayout android:orientation="horizontal" android:id="@+id/ll_list" android:layout_width="match_parent" android:layout_height="wrap_content">
            <cn.xiaochuankeji.tieba.ui.widget.ShadowLinearLayout android:id="@+id/sfl_first" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                <RelativeLayout android:id="@+id/rl_img_first" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <cn.xiaochuankeji.tieba.ui.widget.image.TopRoundImageView android:id="@+id/iv_content_first" android:layout_width="match_parent" android:layout_height="wrap_content" app:viewAspectRatio="1.77"/>
                    <TextView android:textSize="@dimen/follow_post_small" android:textColor="@color/CW" android:gravity="center" android:id="@+id/tv_img_count_first" android:background="#88000000" android:paddingLeft="6dp" android:paddingTop="2dp" android:paddingRight="6dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignRight="@+id/iv_content_first" android:layout_alignBottom="@+id/iv_content_first"/>
                </RelativeLayout>
                <TextView android:textSize="@dimen/follow_post_content" android:textColor="@color/CP" android:ellipsize="end" android:gravity="left" android:id="@+id/tv_content_first" android:layout_width="wrap_content" android:layout_height="0dp" android:maxLines="6" android:layout_weight="1" android:lineSpacingMultiplier="1.4"/>
                <TextView android:textSize="@dimen/F5_text" android:textColor="@color/CT_4" android:gravity="center" android:id="@+id/tv_name_first" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginRight="12dp" android:layout_marginBottom="10dp"/>
            </cn.xiaochuankeji.tieba.ui.widget.ShadowLinearLayout>
            <cn.xiaochuankeji.tieba.ui.widget.ShadowLinearLayout android:id="@+id/sfl_second" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                <RelativeLayout android:id="@+id/rl_img_second" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <cn.xiaochuankeji.tieba.ui.widget.image.TopRoundImageView android:id="@+id/iv_content_second" android:layout_width="match_parent" android:layout_height="wrap_content" app:viewAspectRatio="1.77"/>
                    <TextView android:textSize="@dimen/follow_post_small" android:textColor="@color/CW" android:gravity="center" android:id="@+id/tv_img_count_second" android:background="#88000000" android:paddingLeft="6dp" android:paddingTop="2dp" android:paddingRight="6dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignRight="@+id/iv_content_second" android:layout_alignBottom="@+id/iv_content_second"/>
                </RelativeLayout>
                <TextView android:textSize="@dimen/follow_post_content" android:textColor="@color/CP" android:ellipsize="end" android:gravity="left" android:id="@+id/tv_content_second" android:layout_width="wrap_content" android:layout_height="0dp" android:maxLines="6" android:layout_weight="1" android:lineSpacingMultiplier="1.4"/>
                <TextView android:textSize="@dimen/F5_text" android:textColor="@color/CT_4" android:gravity="center" android:id="@+id/tv_name_second" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginRight="12dp" android:layout_marginBottom="10dp"/>
            </cn.xiaochuankeji.tieba.ui.widget.ShadowLinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/ll_card" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/tv_subject">
            <cn.xiaochuankeji.tieba.ui.widget.ShadowLinearLayout android:id="@+id/sfl" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RelativeLayout android:id="@+id/rl_img" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <cn.xiaochuankeji.tieba.ui.widget.image.TopRoundImageView android:id="@+id/iv_content" android:layout_width="match_parent" android:layout_height="wrap_content" app:viewAspectRatio="1.77"/>
                    <TextView android:textSize="@dimen/follow_post_small" android:textColor="@color/CW" android:gravity="center" android:id="@+id/tv_img_count" android:background="#88000000" android:paddingLeft="6dp" android:paddingTop="2dp" android:paddingRight="6dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignRight="@+id/iv_content" android:layout_alignBottom="@+id/iv_content"/>
                </RelativeLayout>
                <TextView android:textSize="@dimen/follow_post_content" android:textColor="@color/CP" android:ellipsize="end" android:gravity="left" android:id="@+id/tv_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="4" android:lineSpacingMultiplier="1.4"/>
                <TextView android:textSize="@dimen/F5_text" android:textColor="@color/CT_4" android:gravity="center" android:id="@+id/tv_name" android:paddingLeft="12dp" android:paddingRight="12dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </cn.xiaochuankeji.tieba.ui.widget.ShadowLinearLayout>
        </LinearLayout>
    </FrameLayout>
    <cn.xiaochuankeji.tieba.ui.widget.AvatarListLayout android:id="@+id/avatar_list" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="13dp" android:layout_below="@+id/fl_container"/>
    <TextView android:textSize="@dimen/F5_text" android:textColor="@color/CT_5" android:gravity="center_vertical" android:id="@+id/tv_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_toRightOf="@+id/avatar_list" android:layout_below="@+id/fl_container" android:layout_alignTop="@+id/avatar_list" android:layout_alignBottom="@+id/avatar_list"/>
    <TextView android:textSize="13sp" android:textColor="@color/CM" android:id="@+id/tv_create" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="13dp" android:text="跟帖" android:drawableLeft="@drawable/icon_write_follow_post" android:drawablePadding="4dp" android:layout_below="@+id/fl_container" android:layout_alignParentRight="true"/>
</RelativeLayout>
