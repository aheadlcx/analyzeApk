<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/CB" android:paddingTop="13dp" android:paddingBottom="13dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="9dp">
    <TextView android:textSize="@dimen/text_size_16" android:textStyle="bold" android:textColor="@color/CT_2" android:id="@+id/tv_subject" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="13dp" android:layout_marginRight="13dp" android:layout_marginBottom="2dp" android:lineSpacingMultiplier="1.25"/>
    <cn.xiaochuankeji.tieba.ui.widget.ShadowRelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="7dp" android:layout_marginRight="7dp">
        <cn.xiaochuankeji.tieba.ui.widget.image.WebImageView android:id="@+id/iv_avatar" android:layout_width="26dp" android:layout_height="26dp" android:layout_marginLeft="13dp" android:layout_marginTop="13dp" style="@style/CircleImage"/>
        <TextView android:textSize="11sp" android:textColor="@color/CT_4" android:gravity="center" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="5dp" android:layout_toRightOf="@+id/iv_avatar" android:layout_alignTop="@+id/iv_avatar" android:layout_alignBottom="@+id/iv_avatar"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="15dp" android:layout_below="@+id/iv_avatar">
            <RelativeLayout android:id="@+id/rl_img" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp">
                <cn.xiaochuankeji.tieba.ui.widget.image.WebImageView android:id="@+id/iv_img" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" app:viewAspectRatio="1.77"/>
                <TextView android:textSize="@dimen/follow_post_small" android:textColor="@color/CW" android:gravity="center" android:id="@+id/tv_img_count" android:background="#88000000" android:paddingLeft="6dp" android:paddingTop="2dp" android:paddingRight="6dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <TextView android:textSize="@dimen/follow_post_content" android:textColor="@color/CP" android:ellipsize="end" android:gravity="left" android:id="@+id/tv_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="13dp" android:layout_marginTop="6dp" android:layout_marginRight="13dp" android:maxLines="4" android:lineSpacingMultiplier="1.4"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="13dp" android:layout_marginBottom="13dp" android:layout_below="@+id/ll_content">
            <TextView android:textSize="@dimen/F4_text" android:textColor="@color/CT_5" android:id="@+id/tv_share" android:longClickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableLeft="@drawable/ic_share" android:drawablePadding="10dp"/>
            <TextView android:textSize="@dimen/F4_text" android:textColor="@color/CT_5" android:gravity="left" android:id="@+id/tvCommentCount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="37dp" android:drawableLeft="@drawable/ic_comment" android:drawablePadding="10dp"/>
            <RelativeLayout android:gravity="right" android:layout_width="match_parent" android:layout_height="wrap_content">
                <cn.xiaochuankeji.tieba.ui.widget.updown.PostItemUpDownView android:id="@+id/like" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
    </cn.xiaochuankeji.tieba.ui.widget.ShadowRelativeLayout>
</LinearLayout>
