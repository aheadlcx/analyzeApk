<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:id="@+id/audio_play_back" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/audio_play_fun_ll" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:id="@+id/audio_play_click" android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/btn_audio_play" android:scaleType="fitXY" android:contentDescription="@string/image"/>
        <ImageView android:layout_width="16dp" android:layout_height="16dp" android:layout_marginLeft="12dp" android:src="@drawable/audio_play_anim" android:scaleType="fitXY" android:contentDescription="@string/image"/>
        <View style="@style/my_divide_view"/>
        <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/F2_text" android:textColor="@color/CB" android:id="@+id/audio_play_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/time"/>
            <ImageView android:layout_gravity="center" android:id="@+id/audio_play_loading" android:visibility="gone" android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/audio_loading" android:contentDescription="@string/image"/>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
