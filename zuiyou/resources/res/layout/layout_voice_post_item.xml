<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <cn.xiaochuankeji.tieba.ui.topic.weight.PostMemberView android:id="@+id/post_member_view" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <cn.xiaochuankeji.tieba.ui.voice.widget.CoverFrameLayout android:id="@+id/rl_cover" android:paddingLeft="14dp" android:paddingRight="14dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="7.4dp" android:layout_marginBottom="2dp" app:heightWidthRatio="0.4">
        <cn.xiaochuankeji.tieba.ui.widget.image.WebImageView android:id="@+id/iv_cover" android:layout_width="match_parent" android:layout_height="wrap_content" android:scaleType="centerCrop" app:viewAspectRatio="2.5" app:placeholderImage="@drawable/voice_background_03_blur" app:placeholderImageScaleType="6" app:roundedCornerRadius="6dp"/>
        <View android:background="@drawable/voice_bg_white36" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <View android:background="@drawable/voice_bg_black15" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <LinearLayout android:orientation="vertical" android:paddingLeft="16dp" android:paddingTop="16dp" android:paddingRight="16dp" android:paddingBottom="3dp" android:layout_width="match_parent" android:layout_height="match_parent">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="12dp" android:textColor="@color/white" android:ellipsize="end" android:id="@+id/tv_text" android:layout_width="200dp" android:layout_height="wrap_content" android:maxLines="3" android:layout_centerVertical="true" android:lineSpacingMultiplier="1.5"/>
                <RelativeLayout android:layout_width="74dp" android:layout_height="74dp" android:layout_alignParentRight="true" android:layout_centerVertical="true">
                    <cn.xiaochuankeji.tieba.ui.widget.image.WebImageView android:id="@+id/iv_album" android:layout_width="74dp" android:layout_height="74dp" android:scaleType="centerCrop" app:placeholderImage="@drawable/voice_background_03" app:placeholderImageScaleType="6" style="@style/CircleImage"/>
                    <ImageView android:id="@+id/iv_play" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/voice_play" android:layout_centerInParent="true"/>
                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:paddingRight="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_weight="1">
                <TextView android:textSize="10sp" android:textColor="@color/white" android:layout_gravity="center_vertical" android:id="@+id/tv_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="00:00"/>
                <cn.xiaochuankeji.tieba.ui.comment.soundnewvisual.SoundWaveViewV2 android:layout_gravity="center_vertical" android:id="@+id/soundWaveView" android:layout_width="0dp" android:layout_height="10dp" android:layout_marginLeft="10dp" android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        <View android:background="@drawable/voice_bg_image_cover" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </cn.xiaochuankeji.tieba.ui.voice.widget.CoverFrameLayout>
    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <cn.xiaochuankeji.tieba.ui.topic.weight.PostGodReview android:id="@+id/post_god_review" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp"/>
        <TextView android:textSize="@dimen/F6_text" android:textColor="@color/CW" android:ellipsize="middle" android:gravity="center" android:id="@+id/voice_topic" android:background="@drawable/bg_topic" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="20dp" android:layout_marginLeft="@dimen/F4_line" android:singleLine="true"/>
    </FrameLayout>
    <cn.xiaochuankeji.tieba.ui.topic.weight.PostOperateView android:id="@+id/post_operate_view" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <View android:id="@+id/voice_divide_view" android:background="@color/CL" android:layout_width="match_parent" android:layout_height="10dp"/>
    <cn.xiaochuankeji.tieba.ui.voice.widget.VoiceListenerView android:id="@+id/voice_listener_view" android:layout_width="0dp" android:layout_height="0dp"/>
</LinearLayout>
