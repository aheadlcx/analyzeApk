<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <cn.xiaochuankeji.tieba.ui.voice.widget.CoverFrameLayout android:id="@+id/rl_cover" android:paddingLeft="14dp" android:paddingRight="14dp" android:layout_width="match_parent" android:layout_height="wrap_content" app:heightWidthRatio="0.4">
        <cn.xiaochuankeji.tieba.ui.widget.image.WebImageView android:id="@+id/iv_cover" android:layout_width="match_parent" android:layout_height="wrap_content" android:scaleType="centerCrop" app:viewAspectRatio="2.5" app:placeholderImage="@drawable/voice_background_03_blur" app:placeholderImageScaleType="6" app:roundedCornerRadius="6dp"/>
        <cn.xiaochuankeji.tieba.ui.voice.widget.CoverFrameLayout android:background="@drawable/voice_bg_white36" android:layout_width="match_parent" android:layout_height="wrap_content" app:heightWidthRatio="0.4"/>
        <cn.xiaochuankeji.tieba.ui.voice.widget.CoverFrameLayout android:background="@drawable/voice_bg_black15" android:layout_width="match_parent" android:layout_height="wrap_content" app:heightWidthRatio="0.4"/>
        <LinearLayout android:orientation="vertical" android:paddingLeft="16dp" android:paddingTop="16dp" android:paddingRight="16dp" android:paddingBottom="3dp" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                    <ImageView android:layout_gravity="start" android:id="@+id/tv_change_cover" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_marginBottom="6dp" android:src="@drawable/voice_button_change_img" android:contentDescription="@string/image"/>
                    <TextView android:textSize="12dp" android:textColor="@color/white" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/tv_text" android:paddingRight="25dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2" android:layout_weight="1" android:lineSpacingMultiplier="1.5"/>
                </LinearLayout>
                <RelativeLayout android:layout_width="74dp" android:layout_height="74dp">
                    <cn.xiaochuankeji.tieba.ui.widget.image.WebImageView android:id="@+id/iv_album" android:layout_width="74dp" android:layout_height="74dp" android:scaleType="centerCrop" app:placeholderImage="@drawable/voice_background_03" app:placeholderImageScaleType="6" style="@style/CircleImage"/>
                    <ImageView android:id="@+id/iv_play" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/voice_play_v2" android:layout_centerInParent="true"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:paddingRight="5dp" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginTop="2dp" android:layout_weight="1">
                <TextView android:textSize="10sp" android:textColor="@color/white" android:layout_gravity="center_vertical" android:id="@+id/tv_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="00:00"/>
                <cn.xiaochuankeji.tieba.ui.comment.soundnewvisual.SoundWaveViewV2 android:layout_gravity="center_vertical" android:id="@+id/soundWaveView" android:layout_width="0dp" android:layout_height="10dp" android:layout_marginLeft="10dp" android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        <cn.xiaochuankeji.tieba.ui.voice.widget.CoverFrameLayout android:background="@drawable/voice_bg_image_cover" android:layout_width="match_parent" android:layout_height="wrap_content" app:heightWidthRatio="0.4"/>
    </cn.xiaochuankeji.tieba.ui.voice.widget.CoverFrameLayout>
    <cn.xiaochuankeji.tieba.ui.voice.widget.VoiceListenerView android:id="@+id/voice_listener_view" android:layout_width="0dp" android:layout_height="0dp"/>
</FrameLayout>
