<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_gravity="bottom" android:orientation="vertical" android:id="@+id/layout_container" android:background="@drawable/sound_mix_panel_bg" android:padding="30dp" android:layout_width="match_parent" android:layout_height="214dp">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="61dp">
            <TextView android:textSize="16sp" android:textColor="@color/text_color_soundmix" android:id="@+id/label_record_sound" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="3dp" android:text="原声"/>
            <SeekBar android:id="@+id/record_volume_seekbar" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxHeight="2dp" android:max="100" android:progressDrawable="@drawable/seekbar_soundmix" android:minHeight="2dp" android:thumb="@drawable/seekbar_thumb_soundmix_selector"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="61dp">
            <TextView android:textSize="16sp" android:textColor="@color/text_color_soundmix" android:id="@+id/label_bgm_sound" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="3dp" android:text="音乐"/>
            <SeekBar android:id="@+id/bgm_volume_seekbar" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxHeight="2dp" android:max="100" android:progressDrawable="@drawable/seekbar_soundmix" android:minHeight="2dp" android:thumb="@drawable/seekbar_thumb_soundmix_selector"/>
        </LinearLayout>
    </LinearLayout>
</merge>
