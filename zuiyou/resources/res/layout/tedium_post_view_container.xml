<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/llContent" android:background="@drawable/bg_tedium_post_dialog" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="20sp" android:textColor="@color/CT_2" android:ellipsize="end" android:gravity="center" android:id="@+id/tvTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:text="选择理由，精准屏蔽"/>
    <ListView android:id="@+id/lvContent" android:visibility="visible" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="17dp" android:listSelector="@color/transparent" android:divider="@color/transparent" android:dividerHeight="0px"/>
    <EditText android:textSize="15sp" android:id="@+id/dialog_edittext" android:background="@drawable/bg_tedium_post_dialog_edittext" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="27dp" android:layout_marginTop="13dp" android:layout_marginRight="27dp" android:minHeight="43dp" android:hint="其他屏蔽理由" android:singleLine="true" android:maxLength="30" android:imeOptions="actionSend"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="27dp" android:layout_marginTop="20dp" android:layout_marginRight="27dp" android:layout_marginBottom="27dp">
        <TextView android:textSize="16sp" android:textColor="@color/CT_3" android:gravity="center" android:id="@+id/tvCancel" android:background="@drawable/bg_tedium_post_cancel" android:layout_width="0dp" android:layout_height="45dp" android:text="取消" android:layout_weight="1"/>
        <TextView android:textSize="16sp" android:textColor="@color/CW" android:gravity="center" android:id="@+id/tvConfirm" android:background="@drawable/bg_tedium_post_confirm" android:layout_width="0dp" android:layout_height="45dp" android:layout_marginLeft="21dp" android:text="确定" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
