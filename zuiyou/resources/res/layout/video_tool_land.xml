<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/danmu_container" android:background="@color/player_seekbar_background" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="40dp" android:layout_alignParentBottom="true">
        <ImageView android:id="@+id/btn_small_control" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="14dp" android:layout_marginRight="14dp" android:src="@drawable/btn_play_small" android:layout_centerVertical="true"/>
        <TextView android:textSize="16dp" android:textColor="#ff999999" android:textColorHint="#ff999999" android:gravity="center" android:id="@+id/text_danmu" android:background="@drawable/bg_danmu_edittext" android:paddingTop="3dp" android:paddingBottom="3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="110dp" android:text="发个弹幕呗" android:layout_toRightOf="@+id/btn_small_control" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/iv_danmu_switch" android:longClickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="19dp" android:src="@drawable/selector_dan_switch" android:layout_toLeftOf="@+id/btn_fullscreen_switch" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/btn_fullscreen_switch" android:layout_width="26dp" android:layout_height="match_parent" android:layout_marginRight="9dp" android:src="@drawable/video_fullscreen_enter" android:scaleType="center" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rlBottomBar" android:background="@drawable/bg_player_controller" android:paddingTop="10dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="50dp" android:layout_above="@+id/danmu_container">
        <TextView android:textSize="12sp" android:textColor="@color/white" android:id="@+id/tvCurrentTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="10dp" android:text="00:00" android:layout_centerVertical="true"/>
        <TextView android:textSize="12sp" android:textColor="@color/white_70" android:id="@+id/tvTotalTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="10dp" android:text="00:00" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <android.support.v7.widget.AppCompatSeekBar android:id="@+id/seekBar" android:paddingLeft="0dp" android:paddingRight="0dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxHeight="3dp" android:progressDrawable="@drawable/video_pbar_color" android:minHeight="3dp" android:thumb="@drawable/seekbar_thumb_adjust" android:thumbOffset="0dp" android:layout_toLeftOf="@+id/tvTotalTime" android:layout_toRightOf="@+id/tvCurrentTime" android:layout_centerVertical="true" style="@style/Widget.AppCompat.SeekBar"/>
    </RelativeLayout>
    <ProgressBar android:id="@+id/video_progressbar" android:visibility="gone" android:layout_width="match_parent" android:layout_height="2dp" android:progressDrawable="@drawable/video_progressbar_progress" android:layout_alignParentBottom="true" style="@style/Widget.ProgressBar.Horizontal"/>
</RelativeLayout>
