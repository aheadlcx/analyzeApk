<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/alertDlgRoot" android:background="#80000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:layout_gravity="center" android:id="@+id/alertDlgFrame" android:background="@drawable/dialog_bg" android:paddingLeft="10dp" android:paddingTop="5dp" android:paddingRight="10dp" android:paddingBottom="10dp" android:layout_width="300dp" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="20sp" android:textColor="@color/text_title_blue" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="15dp" android:text="提示"/>
            <View android:id="@+id/dividerLine" android:background="@color/divider_line_blue" android:layout_width="match_parent" android:layout_height="2dp"/>
            <TextView android:textSize="16sp" android:textColor="#505050" android:id="@+id/textMessage" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="15dp" android:text="消息" android:lineSpacingExtra="2dp"/>
            <View android:background="@color/CL" android:layout_width="match_parent" android:layout_height="@dimen/divide_space_1px"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="15sp" android:textColor="#222222" android:gravity="center" android:id="@+id/bnCancel" android:background="@drawable/common_item_click_selector" android:layout_width="0dp" android:layout_height="48dp" android:text="取消" android:layout_weight="1"/>
                <View android:id="@+id/viewButtonDivider" android:background="#dcdcdc" android:layout_width="1px" android:layout_height="47dp"/>
                <TextView android:textSize="15sp" android:textColor="#222222" android:gravity="center" android:id="@+id/bnConfirm" android:background="@drawable/common_item_click_selector" android:layout_width="0dp" android:layout_height="48dp" android:text="确定" android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
