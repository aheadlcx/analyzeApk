<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/llMemberInfo" android:layout_width="match_parent" android:layout_height="44dp">
        <cn.xiaochuankeji.tieba.ui.widget.image.WebImageView android:id="@+id/pvAvatar" android:longClickable="true" android:layout_width="32.2dp" android:layout_height="32.2dp" android:layout_marginLeft="13dp" android:layout_marginTop="11.3dp" android:layout_centerVertical="true" style="@style/CircleImage"/>
        <TextView android:textSize="13dp" android:textColor="@color/CT_4" android:ellipsize="end" android:id="@+id/tvWriterName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:singleLine="true" android:layout_toRightOf="@+id/pvAvatar" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/ivTediumPost" android:layout_width="44dp" android:layout_height="44dp" android:src="@drawable/ic_close" android:scaleType="center" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="@dimen/F4_text" android:textColor="@color/CT_6" android:gravity="center" android:id="@+id/tvAdsTip" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="22dp" android:text="广告" android:layout_toLeftOf="@+id/ivTediumPost" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView android:textSize="@dimen/F2_text" android:textColor="@color/CT_2" android:id="@+id/ad_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="13dp" android:layout_marginTop="8.7dp" android:layout_marginRight="13dp" android:layout_marginBottom="8.7dp" android:lineSpacingExtra="3dp"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="13dp" android:layout_marginTop="4dp" android:layout_marginRight="13dp">
        <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/iv_ads_cover" android:layout_width="match_parent" android:layout_height="wrap_content" app:viewAspectRatio="1.78" app:placeholderImage="@color/image_placeholder"/>
        <com.qq.e.ads.nativ.MediaView android:id="@+id/gdt_media_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
        <TextView android:id="@+id/tv_ads_dur" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="13.2dp" android:layout_marginBottom="6.7dp" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
        <ImageView android:id="@+id/iv_video_play" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_video_play" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/ad_container" android:background="@color/CB_1" android:layout_width="match_parent" android:layout_height="56dp" android:layout_marginLeft="13dp" android:layout_marginRight="13dp">
        <LinearLayout android:orientation="vertical" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="100dp" android:layout_centerVertical="true">
            <TextView android:textSize="@dimen/F2_text" android:textColor="@color/CT_2" android:ellipsize="end" android:id="@+id/link_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true"/>
            <TextView android:textSize="@dimen/F10_text" android:textColor="@color/CT_5" android:ellipsize="end" android:id="@+id/link_describe" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true"/>
        </LinearLayout>
        <TextView android:textSize="@dimen/F10_text" android:textColor="@color/CM" android:gravity="center" android:id="@+id/btn_download" android:background="@drawable/btn_ads_download" android:paddingLeft="3dp" android:paddingTop="4.8dp" android:paddingRight="3dp" android:paddingBottom="4.8dp" android:layout_width="70dp" android:layout_height="26dp" android:layout_marginRight="10dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:id="@+id/vPostDivide" android:background="@color/CL" android:layout_width="match_parent" android:layout_height="10dp" android:layout_marginTop="13dp"/>
</LinearLayout>
