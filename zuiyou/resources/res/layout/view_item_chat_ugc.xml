<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <cn.xiaochuankeji.tieba.ui.widget.image.WebImageView android:id="@+id/avatar" android:layout_width="34dp" android:layout_height="34dp" android:layout_marginRight="10dp" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" style="@style/CircleImage"/>
    <LinearLayout android:orientation="vertical" android:layout_width="278dp" android:layout_height="wrap_content" android:layout_toRightOf="@+id/avatar" android:layout_alignParentTop="true">
        <cn.xiaochuankeji.tieba.widget.rich.LineSpaceExtraContainer android:background="@drawable/chat_item_top_bg" android:layout_width="match_parent" android:layout_height="wrap_content">
            <cn.xiaochuankeji.tieba.widget.rich.LineSpaceExtraCompatTextView android:textSize="@dimen/F9_text" android:textColor="@color/CT_1" android:id="@+id/content" android:paddingLeft="10dp" android:paddingTop="8dp" android:paddingRight="10dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:lineSpacingMultiplier="1.5"/>
        </cn.xiaochuankeji.tieba.widget.rich.LineSpaceExtraContainer>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/click_area" android:background="@drawable/chat_item_bottom_bg" android:paddingLeft="12dp" android:paddingTop="12dp" android:paddingRight="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="75dp">
            <FrameLayout android:layout_width="44dp" android:layout_height="44dp">
                <cn.xiaochuankeji.tieba.ui.widget.image.WebImageView android:id="@+id/thumb" android:layout_width="44dp" android:layout_height="44dp" app:roundedCornerRadius="5dp" app:roundTopLeft="true" app:roundTopRight="true" app:roundBottomRight="true" app:roundBottomLeft="true"/>
                <android.support.v7.widget.AppCompatImageView android:layout_gravity="center" android:id="@+id/flag" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/img_session_ugcvideo_flag"/>
            </FrameLayout>
            <TextView android:textSize="@dimen/F10_text" android:textColor="@color/CT_5" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:maxLines="2"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
