<?xml version="1.0" encoding="utf-8"?>
<cn.xiaochuankeji.tieba.ui.widget.DealChildLongClickFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:background="@color/CB" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="wrap_content">
            <cn.xiaochuankeji.tieba.ui.widget.image.WebImageView android:id="@+id/picEvent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:scaleType="centerCrop" app:viewAspectRatio="2.55" app:placeholderImage="@drawable/story_cover_empty_view" app:roundedCornerRadius="5dp"/>
