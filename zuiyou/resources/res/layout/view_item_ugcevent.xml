                    <TextView android:textSize="11sp" android:textColor="@color/white" android:gravity="center" android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/tvTotal" android:background="@drawable/bg_event_review_count" android:paddingLeft="3dp" android:paddingRight="3dp" android:layout_width="wrap_content" android:layout_height="20dp" android:minWidth="20dp" android:text="6"/>
                </FrameLayout>
                <TextView android:textSize="12sp" android:textColor="@color/CT_4" android:id="@+id/tvDesc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="42dp" android:layout_marginRight="10dp" android:lineSpacingExtra="1dp"/>
                <cn.xiaochuankeji.tieba.ui.homepage.banner.EventVideoScrollView android:id="@+id/event_video_scroll_view" android:focusable="true" android:scrollbars="none" android:longClickable="true" android:layout_width="match_parent" android:layout_height="176dp" android:layout_marginTop="7dp" android:fillViewport="true">
                    <LinearLayout android:orientation="horizontal" android:id="@+id/event_video_container" android:paddingLeft="10dp" android:paddingRight="4dp" android:longClickable="true" android:layout_width="match_parent" android:layout_height="match_parent"/>
                </cn.xiaochuankeji.tieba.ui.homepage.banner.EventVideoScrollView>
            </LinearLayout>
            <View android:layout_width="match_parent" android:layout_height="14dp"/>
        </LinearLayout>
    </RelativeLayout>
</cn.xiaochuankeji.tieba.ui.widget.DealChildLongClickFrameLayout>
