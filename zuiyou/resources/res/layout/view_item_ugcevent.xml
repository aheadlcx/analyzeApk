                <FrameLayout android:paddingTop="1dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
                    <android.support.v7.widget.AppCompatImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/img_ugc_video_flag" android:scaleType="centerCrop"/>
