<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/vMusicContent" android:layout_width="match_parent" android:layout_height="74dp" android:layout_marginTop="7dp">
        <View android:background="@drawable/bg_select_music_item" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="87dp" android:layout_marginRight="17dp"/>
        <ImageView android:id="@+id/ivFavor" android:layout_width="29dp" android:layout_height="29dp" android:layout_marginRight="27dp" android:src="@drawable/selector_ugcmusic_favor" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="70dp" android:layout_marginLeft="19dp" android:layout_marginTop="2dp" android:layout_marginRight="56dp" android:layout_marginBottom="2dp">
            <ImageView android:id="@+id/vPictureFlag" android:layout_width="70dp" android:layout_height="70dp" android:layout_marginLeft="17dp" android:src="@drawable/img_music_select_pic_flag" android:layout_centerVertical="true"/>
