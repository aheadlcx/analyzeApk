<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="43dp">
    <ImageView android:id="@+id/ivIcon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="17dp" android:layout_centerVertical="true"/>
    <TextView android:textSize="15dp" android:textColor="#333333" android:id="@+id/tvTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="17dp" android:layout_toRightOf="@+id/ivIcon" android:layout_centerVertical="true"/>
    <ImageView android:id="@+id/ivCrumb" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="7dp" android:src="@drawable/icon_badge_dot" android:layout_toRightOf="@+id/tvTitle" android:layout_centerVertical="true"/>
    <ImageView android:id="@+id/ivArrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="13dp" android:src="@drawable/ic_arrow_right" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    <TextView android:textSize="12dp" android:textColor="#9ca3b4" android:id="@+id/tvCount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:layout_toLeftOf="@+id/ivArrow" android:layout_centerVertical="true"/>
    <ImageView android:id="@+id/ivSelect" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="13dp" android:src="@drawable/selector_switch" android:layout_toLeftOf="@+id/ivArrow" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
</RelativeLayout>
