    <LinearLayout android:orientation="vertical" android:id="@+id/llReportContent" android:background="@drawable/bg_ugcvideo_report_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_centerInParent="true">
